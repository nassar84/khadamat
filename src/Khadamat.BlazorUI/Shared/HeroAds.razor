@using Khadamat.BlazorUI.State
@implements IDisposable
@inject NavigationManager Navigation
@inject AppState State
@inject AuthenticationStateProvider AuthStateProvider

<div class="row mb-4">
    <!-- Hero Slider Section -->
    <div class="col-lg-8 mb-3 mb-lg-0">
        <div class="hero-wrapper rounded-4 overflow-hidden position-relative shadow-lg" style="height: 340px;">
            
            <!-- Slides -->
            @for (int i = 0; i < HeroImages.Count; i++)
            {
                var index = i;
                <div class="hero-slide @(CurrentSlideIndex == index ? "active" : "")" 
                     style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('@HeroImages[index]');">
                </div>
            }

            <!-- Content Overlay -->
            <div class="hero-content position-absolute w-100 h-100 d-flex flex-column justify-content-center align-items-center text-center p-4">
                <h2 class="display-5 fw-bold text-white mb-2 animate-up-delay-1" style="text-shadow: 0 4px 15px rgba(0,0,0,0.6);">
                    منصة خدمات مصر
                </h2>
                <p class="fs-5 text-white opacity-90 mb-4 fw-bold animate-up-delay-2" style="max-width: 80%; text-shadow: 0 2px 8px rgba(0,0,0,0.6);">
                    أفضل الحرفيين والمهنيين المصريين في مكان واحد
                </p>
                <div class="slide-indicators d-flex gap-2 animate-up-delay-3">
                    @for (int i = 0; i < HeroImages.Count; i++)
                    {
                        var index = i;
                        <span class="indicator @(CurrentSlideIndex == index ? "active" : "")" 
                              @onclick="() => SetSlide(index)"></span>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Invitation / Actions Section -->
    <div class="col-lg-4 d-flex flex-column gap-3">
        <!-- Join as Provider Card -->
        <div class="action-card glass-card p-4 flex-grow-1 d-flex flex-row align-items-center justify-content-between position-relative overflow-hidden cursor-pointer"
             @onclick="HandleRegisterClick">
            <div class="z-2 position-relative">
                <h5 class="fw-bold text-primary mb-1">صنايعي أو مهني؟</h5>
                <p class="text-muted small mb-3">سجل خدماتك وزود دخلك معانا</p>
                <span class="btn btn-sm btn-primary rounded-pill px-3">
                   سجل الآن <i class="fa-solid fa-arrow-left me-1"></i>
                </span>
            </div>
            <div class="action-icon-wrapper bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                <i class="fa-solid fa-briefcase fs-3"></i>
            </div>
            <div class="hover-glow bg-primary"></div>
        </div>

        <!-- Find Service Card (With Search) -->
        <div class="action-card glass-card p-4 flex-grow-1 d-flex flex-column justify-content-center position-relative overflow-hidden">
            <div class="d-flex justify-content-between align-items-start w-100 mb-2 z-2 position-relative">
                <div>
                    <h5 class="fw-bold text-secondary mb-1">محتاج صنايعي؟</h5>
                    <p class="text-muted small mb-0">دور على أفضل الخدمات جنبك</p>
                </div>
                <div class="action-icon-wrapper bg-secondary bg-opacity-10 text-secondary rounded-circle d-flex align-items-center justify-content-center flex-shrink-0" style="width: 50px; height: 50px;">
                    <i class="fa-solid fa-magnifying-glass-location fs-4"></i>
                </div>
            </div>

            <!-- Embedded Search Bar (Full Width) -->
            <div class="input-group mt-2 shadow-sm rounded-pill overflow-hidden bg-white w-100 z-2 position-relative" style="border: 1px solid rgba(0,0,0,0.08);">
                <input type="text" class="form-control border-0 px-4 shadow-none text-end" placeholder="ابحث عن سباك، نجار..." 
                       @bind="SearchTerm" @bind:event="oninput" @onkeyup="HandleKeyUp" 
                       style="height: 50px; font-size: 1rem;" />
                
                <button class="btn btn-link text-muted border-0 bg-white" title="بحث صوتي">
                        <i class="fa-solid fa-microphone"></i>
                </button>

                <button class="btn btn-secondary px-4" @onclick="Search" style="z-index: 5;">
                    <i class="fa-solid fa-magnifying-glass text-white fs-5"></i>
                </button>
            </div>
            
            <div class="hover-glow bg-secondary"></div>
        </div>
    </div>
</div>

<style>
    /* Slider Styles */
    .hero-wrapper {
        background: #1e293b;
    }
    
    .hero-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        opacity: 0;
        transition: opacity 1s ease-in-out;
        z-index: 1;
    }
    
    .hero-slide.active {
        opacity: 1;
    }

    .hero-content {
        z-index: 2;
    }

    .indicator {
        width: 10px;
        height: 10px;
        background: rgba(255,255,255,0.4);
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.3s;
    }

    .indicator.active {
        background: white;
        transform: scale(1.3);
    }

    /* Action Cards Styling */
    .action-card {
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        border: 1px solid rgba(255,255,255,0.6);
    }

    .action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        border-color: white;
    }

    .hover-glow {
        position: absolute;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        filter: blur(40px);
        opacity: 0;
        transition: opacity 0.5s;
        top: -20px;
        left: -20px;
        z-index: 0;
    }

    .action-card:hover .hover-glow {
        opacity: 0.15;
    }

    .cursor-pointer {
        cursor: pointer;
    }

    .animate-up-delay-1 { animation: fadeInUp 0.8s ease-out 0.1s both; }
    .animate-up-delay-2 { animation: fadeInUp 0.8s ease-out 0.3s both; }
    .animate-up-delay-3 { animation: fadeInUp 0.8s ease-out 0.5s both; }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

@code {
    private List<string> HeroImages = new() { 
        "images/hero_banner.png", 
        "images/hero_banner2.png" 
    };
    private int CurrentSlideIndex = 0;
    private System.Threading.Timer? _timer;
    private string SearchTerm { get; set; } = "";

    protected override void OnInitialized()
    {
        // Start auto-rotation
        _timer = new System.Threading.Timer(RotateSlide, null, 5000, 5000);
    }

    private void RotateSlide(object? state)
    {
        var nextIndex = (CurrentSlideIndex + 1) % HeroImages.Count;
        SetSlide(nextIndex);
    }

    private void SetSlide(int index)
    {
        if (CurrentSlideIndex != index)
        {
            CurrentSlideIndex = index;
            InvokeAsync(StateHasChanged);
        }
    }

    private void Search()
    {
        if (!string.IsNullOrWhiteSpace(SearchTerm))
        {
            Navigation.NavigateTo($"/search?q={Uri.EscapeDataString(SearchTerm)}");
        }
    }

    private void HandleKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Search();
        }
    }

    private async Task HandleRegisterClick()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            if (State.IsProfileComplete)
            {
                Navigation.NavigateTo("/provider/create-request");
            }
            else
            {
                Navigation.NavigateTo("/settings?returnUrl=/provider/create-request");
            }
        }
        else
        {
            Navigation.NavigateTo("/register?Type=Provider");
        }
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}
