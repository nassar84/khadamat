@using Khadamat.Application.DTOs
@inject IJSRuntime JS

<div class="category-slider-container mb-5">
    <!-- Header removed -->

    @if (Categories == null)
    {
        <div class="d-flex gap-3 overflow-hidden">
            @for (int i = 0; i < 4; i++)
            {
                <div class="skeleton rounded-4" style="min-width: 100px; height: 120px;"></div>
            }
        </div>
    }
    else
    {
        <div class="native-scroller">
            <div class="scroller-inner">
                @foreach (var cat in Categories)
                {
                    <div class="simple-cat-card" @onclick="() => OnCategoryClick(cat)">
                        <div class="icon-circle">
                            <span>@cat.Icon</span>
                        </div>
                        <div class="cat-name">@cat.Name</div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .category-slider-container {
        width: 100%;
        overflow: hidden;
        position: relative;
    }

    .native-scroller {
        overflow-x: auto;
        overflow-y: hidden;
        -webkit-overflow-scrolling: touch;
        padding-bottom: 20px;
        scrollbar-width: none;
        -ms-overflow-style: none;
        cursor: grab;
        user-select: none;
    }

    .native-scroller:active {
        cursor: grabbing;
    }

    .native-scroller::-webkit-scrollbar {
        display: none;
    }

    .scroller-inner {
        display: flex;
        gap: 15px;
        padding: 5px 15px;
    }

    .simple-cat-card {
        background: white;
        border-radius: 20px;
        padding: 15px 5px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: transform 0.2s;
        height: 120px;
        min-width: 110px;
        flex-shrink: 0;
        cursor: pointer;
    }

    .simple-cat-card:active {
        transform: scale(0.95);
        background: #f8fafc;
    }

    .icon-circle {
        width: 55px;
        height: 55px;
        background: var(--theme-light, rgba(99, 102, 241, 0.1));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
    }

    .cat-name {
        font-weight: 700;
        font-size: 0.85rem;
        color: #334155;
        text-align: center;
        white-space: normal; /* Allow wrap */
        line-height: 1.2;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 35px; /* Fixed height for 2 lines */
    }
</style>

<script>
    // Simple drag to scroll script
    (function() {
        const slider = document.querySelector('.native-scroller');
        if(!slider) return;
        let isDown = false;
        let startX;
        let scrollLeft;

        slider.addEventListener('mousedown', (e) => {
            isDown = true;
            slider.classList.add('active');
            startX = e.pageX - slider.offsetLeft;
            scrollLeft = slider.scrollLeft;
        });
        slider.addEventListener('mouseleave', () => {
            isDown = false;
            slider.classList.remove('active');
        });
        slider.addEventListener('mouseup', () => {
            isDown = false;
            slider.classList.remove('active');
        });
        slider.addEventListener('mousemove', (e) => {
            if(!isDown) return;
            e.preventDefault();
            const x = e.pageX - slider.offsetLeft;
            const walk = (x - startX) * 2; //scroll-fast
            slider.scrollLeft = scrollLeft - walk;
        });
    })();
</script>

@code {
    [Parameter] public List<MainCategoryDto>? Categories { get; set; }
    [Parameter] public EventCallback<MainCategoryDto> OnClick { get; set; }

    private async Task OnCategoryClick(MainCategoryDto cat)
    {
        if (OnClick.HasDelegate) await OnClick.InvokeAsync(cat);
    }
}
