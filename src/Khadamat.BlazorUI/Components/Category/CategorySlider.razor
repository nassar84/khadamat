@using Khadamat.Application.DTOs
@inject IJSRuntime JS

<div class="category-slider-container mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3 px-1">
        <h5 class="fw-bold mb-0">üóÇÔ∏è ÿßŸÑÿ™ÿµŸÜŸäŸÅÿßÿ™ ÿßŸÑÿ±ÿ¶Ÿäÿ≥Ÿäÿ©</h5>
        <a href="categories" class="text-primary text-decoration-none fw-bold small">ÿπÿ±ÿ∂ ÿßŸÑŸÉŸÑ</a>
    </div>

    @if (Categories == null)
    {
        <div class="d-flex gap-3 overflow-hidden">
            @for (int i = 0; i < 4; i++)
            {
                <div class="skeleton rounded-4" style="min-width: 100px; height: 120px;"></div>
            }
        </div>
    }
    else
    {
        <div class="swiper mainCategorySwiper">
            <div class="swiper-wrapper">
                @foreach (var cat in Categories)
                {
                    <div class="swiper-slide">
                        <div class="simple-cat-card" @onclick="() => OnCategoryClick(cat)">
                            <div class="icon-circle">
                                <span>@cat.Icon</span>
                            </div>
                            <div class="cat-name">@cat.Name</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .category-slider-container {
        width: 100%;
        overflow: hidden;
    }

    .mainCategorySwiper {
        padding: 5px 2px 15px;
    }

    .simple-cat-card {
        background: white;
        border-radius: 20px;
        padding: 15px 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: transform 0.2s;
        height: 110px;
        cursor: pointer;
    }

    .simple-cat-card:active {
        transform: scale(0.95);
        background: #f8fafc;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        background: var(--theme-light, rgba(99, 102, 241, 0.1));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .cat-name {
        font-weight: 700;
        font-size: 0.85rem;
        color: #334155;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 100%;
    }

    .swiper-slide {
        width: 110px !important;
    }
</style>

@code {
    [Parameter] public List<MainCategoryDto>? Categories { get; set; }
    [Parameter] public EventCallback<MainCategoryDto> OnClick { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && Categories?.Any() == true)
        {
            await InitSwiper();
        }
    }

    private async Task InitSwiper()
    {
        await JS.InvokeVoidAsync("eval", @"
            if (window.catSwiper) window.catSwiper.destroy();
            window.catSwiper = new Swiper('.mainCategorySwiper', {
                slidesPerView: 'auto',
                spaceBetween: 10,
                loop: true,
                autoplay: {
                    delay: 2500,
                    disableOnInteraction: false,
                },
                speed: 800,
                grabCursor: true,
                rtl: true
            });
        ");
    }

    private async Task OnCategoryClick(MainCategoryDto cat)
    {
        if (OnClick.HasDelegate) await OnClick.InvokeAsync(cat);
    }
}
