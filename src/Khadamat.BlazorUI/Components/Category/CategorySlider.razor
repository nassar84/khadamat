@using Khadamat.Application.DTOs
@inject IJSRuntime JS

<div class="category-slider-container mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3 px-1">
        <h5 class="fw-bold mb-0">üóÇÔ∏è ÿßŸÑÿ™ÿµŸÜŸäŸÅÿßÿ™ ÿßŸÑÿ±ÿ¶Ÿäÿ≥Ÿäÿ©</h5>
        <a href="categories" class="text-primary text-decoration-none fw-bold small">ÿπÿ±ÿ∂ ÿßŸÑŸÉŸÑ</a>
    </div>

    @if (Categories == null)
    {
        <div class="d-flex gap-3 overflow-hidden">
            @for (int i = 0; i < 4; i++)
            {
                <div class="skeleton rounded-4" style="min-width: 100px; height: 120px;"></div>
            }
        </div>
    }
    else
    {
        <div class="native-scroller">
            <div class="scroller-inner">
                @foreach (var cat in Categories)
                {
                    <div class="simple-cat-card" @onclick="() => OnCategoryClick(cat)">
                        <div class="icon-circle">
                            <span>@cat.Icon</span>
                        </div>
                        <div class="cat-name">@cat.Name</div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .category-slider-container {
        width: 100%;
        overflow: hidden;
    }

    .native-scroller {
        overflow-x: auto;
        overflow-y: hidden;
        -webkit-overflow-scrolling: touch;
        padding-bottom: 10px;
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE/Edge */
    }

    .native-scroller::-webkit-scrollbar {
        display: none; /* Chrome/Safari/Brave */
    }

    .scroller-inner {
        display: flex;
        gap: 12px;
        padding: 5px 2px;
    }

    .simple-cat-card {
        background: white;
        border-radius: 20px;
        padding: 15px 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: transform 0.2s;
        height: 110px;
        min-width: 105px; /* Fixed width for cards in scroller */
        flex-shrink: 0;
        cursor: pointer;
    }

    .simple-cat-card:active {
        transform: scale(0.95);
        background: #f8fafc;
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        background: var(--theme-light, rgba(99, 102, 241, 0.1));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .cat-name {
        font-weight: 700;
        font-size: 0.85rem;
        color: #334155;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 100%;
    }
</style>

@code {
    [Parameter] public List<MainCategoryDto>? Categories { get; set; }
    [Parameter] public EventCallback<MainCategoryDto> OnClick { get; set; }

    private async Task OnCategoryClick(MainCategoryDto cat)
    {
        if (OnClick.HasDelegate) await OnClick.InvokeAsync(cat);
    }
}
