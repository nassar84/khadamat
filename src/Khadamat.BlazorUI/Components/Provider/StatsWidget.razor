<div class="stats-widget p-3 rounded-4 border shadow-sm h-100 bg-white d-flex flex-column justify-content-center">
    <div class="d-flex align-items-center mb-2">
        <div class="stats-icon bg-@(Color) bg-opacity-10 text-@(Color) rounded-3 me-2">
            <i class="@Icon"></i>
        </div>
        <span class="text-muted small fw-bold">@Label</span>
    </div>
    <div class="fw-bold fs-4">@Value</div>
</div>

<style>
    .stats-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
    }
</style>

@code {
    [Parameter] public string Icon { get; set; } = "fa-solid fa-chart-line";
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string Value { get; set; } = "0";
    [Parameter] public string Color { get; set; } = "primary";
}

