    .upload-btn:hover {
        transform: scale(1.1);
    }
</style>

@code {
    private Khadamat.Application.DTOs.RegisterRequest registerModel = new();
    private string confirmPassword = "";
    private bool isBusy = false;
    private string errorMessage = "";
    private List<string> apiErrors = new();
    private bool passwordsMatch => string.IsNullOrEmpty(registerModel.Password) || registerModel.Password == confirmPassword;
    private string? previewImage;
    private bool isLoadingCities = false;

    private List<Khadamat.Application.DTOs.GovernorateDto> governorates = new();
    private List<Khadamat.Application.DTOs.CityDto> cities = new();
    private int SelectedGovernorateId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        registerModel.UserType = "User";
        registerModel.Gender = "Male"; // Default
        
        try 
        {
            governorates = await ApiClient.GetGovernoratesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading governorates: {ex.Message}");
        }
    }

    private async Task OnInputFileChange(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try 
            {
                if (file.Size > 5120000) // 5MB
                {
                    errorMessage = "حجم الصورة كبير جداً (أقصى حد 5 ميجا)";
                    return;
                }

                var buffer = new byte[file.Size];
                await file.OpenReadStream(5120000).ReadAsync(buffer);
                registerModel.ProfileImageBase64 = Convert.ToBase64String(buffer);
                
                previewImage = $"data:{file.ContentType};base64,{registerModel.ProfileImageBase64}";
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error uploading file: {ex.Message}");
                errorMessage = "حدث خطأ أثناء رفع الصورة";
            }
        }
    }

    private async Task OnGovernorateChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int govId) && govId > 0)
        {
            SelectedGovernorateId = govId;
            isLoadingCities = true;
            StateHasChanged();
            
            try 
            {
                Console.WriteLine($"[Register] Loading cities for governorate {govId}...");
                cities = await ApiClient.GetCitiesAsync(govId);
                Console.WriteLine($"[Register] Loaded {cities.Count} cities.");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"[Register] Error loading cities: {ex.Message}");
                cities = new List<Khadamat.Application.DTOs.CityDto>();
            }
            finally 
            {
                isLoadingCities = false;
                registerModel.CityId = 0; // Reset city
                StateHasChanged();
            }
        }
        else
        {
            SelectedGovernorateId = 0;
            cities.Clear();
            registerModel.CityId = 0;
            StateHasChanged();
        }
    }

    private async Task HandleRegister()
    {
        errorMessage = "";
        
        if (registerModel.Password != confirmPassword)
        {
            errorMessage = "كلمة المرور وتأكيدها غير متطابقين";
            return;
        }

        if (registerModel.CityId == 0)
        {
            errorMessage = "الرجاء اختيار المدينة";
            return;
        }

        isBusy = true;
        apiErrors.Clear();
        try
        {
            var result = await AuthService.Register(registerModel);
            if (result.Success)
            {
                Navigation.NavigateTo("/login?registered=true");
            }
            else
            {
                errorMessage = result.Message ?? "حدث خطأ أثناء التسجيل";
                if (result.Errors != null && result.Errors.Any())
                {
                    apiErrors = result.Errors;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "حدث خطأ غير متوقع: " + ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }
}
