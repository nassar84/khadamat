@code {
    private AuthResponse? profile;
    private ProviderProfileDto? profileData;
    private List<ServiceDto> userServices = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfile();
    }

    private bool isDemoMode = false;

    private async Task LoadProfile()
    {
        isLoading = true;
        isDemoMode = false;
        try
        {
            var profileResult = await AuthService.GetProfileAsync();
            if (profileResult?.Success == true && profileResult.Data != null)
            {
                profile = profileResult.Data;
                
                // Run additional info fetching in parallel
                var providerTask = Api.GetProviderProfileAsync(profile.Id);
                var servicesTask = Api.GetMyServicesAsync();

                try 
                {
                    await Task.WhenAll(providerTask, servicesTask);
                    profileData = providerTask.Result;
                    userServices = servicesTask.Result.Items;
                }
                catch
                {
                    // If parallel fails, try individual fallback
                    try { profileData = await Api.GetProviderProfileAsync(profile.Id); } catch { profileData = null; }
                    try { var s = await Api.GetMyServicesAsync(); userServices = s.Items; } catch { }
                }
            }
            else
            {
                throw new Exception("Failed to load profile");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile: {ex.Message}");
            isDemoMode = true;
            LoadMockProfile();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void LoadMockProfile()
    {
        profile = new AuthResponse
        {
            Id = "user-123",
            FullName = "مستخدم تجريبي",
            UserName = "DemoUser",
            Email = "demo@khadamat.com",
            PhoneNumber = "0501234567",
            CityName = "الرياض",
            IsActive = true,
            EmailConfirmed = true,
            PhoneNumberConfirmed = true,
            IsProvider = true,
            IsVerified = true,
            CreatedAt = DateTime.Now.AddMonths(-3),
            Bio = "هذا حساب تجريبي لعرض مميزات التطبيق دون الحاجة لاتصال بالخادم."
        };

        userServices = new List<ServiceDto>
        {
            new ServiceDto 
            { 
                Id = 1, 
                Title = "خدمة تنظيف منازل احترافية", 
                Price = 250, 
                CategoryName = "تنظيف", 
                Description = "نقدم خدمة تنظيف شاملة للمنازل والشقق بأفضل الأسعار",
                IsApproved = true
            },
            new ServiceDto 
            { 
                Id = 2, 
                Title = "صيانة كهرباء مستعجلة", 
                Price = 100, 
                CategoryName = "كهرباء",
                Description = "فني كهرباء خبرة 10 سنوات لإصلاح جميع الأعطال",
                IsApproved = false
            }
        };
    }

    private void NavigateToSettings()
    {
        Navigation.NavigateTo("/settings");
    }

    public class ProviderProfileDto
    {
        public string BusinessName { get; set; } = string.Empty;
        public string Bio { get; set; } = string.Empty;
        public string Photo { get; set; } = string.Empty;
        public string Location { get; set; } = string.Empty;
        public string ContactNumber { get; set; } = string.Empty;
        public string? WebsiteUrl { get; set; }
        public string? InstagramUrl { get; set; }
        public string? TwitterUrl { get; set; }
        public bool Verified { get; set; }
    }
}
