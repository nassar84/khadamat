@page "/profile"
@using Khadamat.Application.DTOs
@using Khadamat.BlazorUI.Services
@using Khadamat.BlazorUI.Services.Auth
@inject IAuthService AuthService
@inject ApiClient Api
@inject NavigationManager Navigation
@inject Khadamat.BlazorUI.State.AppState AppState

<div class="container py-4">
    @if (isDemoMode)
    {
        <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>
            <div>
                <strong>وضع العرض التجريبي:</strong> فشل تحميل البيانات من الخادم، يتم عرض ملف شخصي افتراضي للمعاينة.
            </div>
        </div>
    }
    @if (isLoading)
    {
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="glass-card p-4 text-center skeleton-box" style="height: 400px;"></div>
                <div class="glass-card p-4 mt-3 skeleton-box" style="height: 200px;"></div>
            </div>
            <div class="col-lg-8">
                <div class="glass-card p-4 mb-4 skeleton-box" style="height: 300px;"></div>
                <div class="glass-card p-4 skeleton-box" style="height: 200px;"></div>
            </div>
        </div>
        
        <style>
            .skeleton-box {
                background: linear-gradient(90deg, rgba(238, 238, 238, 0.5) 25%, rgba(224, 224, 224, 0.6) 50%, rgba(238, 238, 238, 0.5) 75%);
                background-size: 200% 100%;
                animation: skeleton-loading 1.5s infinite;
                border: none;
            }
            @@keyframes skeleton-loading {
                0% { background-position: 200% 0; }
                100% { background-position: -200% 0; }
            }
        </style>
    }
    else if (profile != null)
    {
        <div class="row g-4">
            <!-- Left Sidebar - Profile Card -->
            <div class="col-lg-4">
                <div class="glass-card p-4 text-center">
                    <!-- Profile Photo -->
                    <div class="profile-photo-wrapper mb-3">
                        <img src="@Khadamat.BlazorUI.Helpers.DefaultImages.GetUserAvatar(profile.FullName, null, profileData?.Photo)" 
                             alt="Profile Photo" class="profile-photo" />
                    </div>

                    <!-- User Info -->
                    <h4 class="fw-bold mb-2">@profile.FullName</h4>
                    <p class="text-muted mb-1">@@@profile.UserName</p>
                    
                    @if (!string.IsNullOrEmpty(profileData?.BusinessName))
                    {
                        <div class="badge bg-primary-subtle text-primary mb-3">
                            <i class="fa-solid fa-briefcase me-1"></i> @profileData.BusinessName
                        </div>
                    }

                    @if (profile.IsVerified)
                    {
                        <div class="verified-badge mb-3">
                            <i class="fa-solid fa-check-circle text-success"></i>
                            <span class="text-success fw-bold">حساب موثق</span>
                        </div>
                    }
                    else if (profile.IsProvider)
                    {
                        <div class="badge bg-warning-subtle text-warning mb-3">
                            <i class="fa-solid fa-clock me-1"></i> قيد توثيق الهوية
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <button class="btn btn-outline-primary btn-sm rounded-pill px-4" @onclick='() => Navigation.NavigateTo("/provider/apply")'>
                                <i class="fa-solid fa-briefcase me-2"></i>انضم كمزود خدمة
                            </button>
                        </div>
                    }

                    <!-- Bio -->
                    @if (!string.IsNullOrEmpty(profile.Bio))
                    {
                        <p class="text-muted small mt-3">@profile.Bio</p>
                    }
                    else if (!string.IsNullOrEmpty(profileData?.Bio))
                    {
                        <p class="text-muted small mt-3">@profileData.Bio</p>
                    }

                    <!-- Quick Actions -->
                    <div class="d-grid gap-2 mt-4">
                        <button class="btn btn-primary-premium rounded-pill shadow-sm" @onclick="NavigateToSettings">
                            <i class="fa-solid fa-user-pen me-2"></i>تعديل بياناتي
                        </button>
                        <button class="btn btn-outline-primary rounded-pill" @onclick='() => Navigation.NavigateTo("/settings?tab=security")'>
                            <i class="fa-solid fa-key me-2"></i>تغيير كلمة المرور
                        </button>
                    </div>

                    <!-- Statistics -->
                    <div class="row g-3 mt-3 text-center">
                        <div class="col-4 cursor-pointer" @onclick='() => Navigation.NavigateTo("/provider/myservices")'>
                            <div class="stat-box">
                                <div class="fs-4 fw-bold text-primary">@userServices.Count</div>
                                <div class="small text-muted">خدمات</div>
                            </div>
                        </div>
                        <div class="col-4 cursor-pointer" @onclick='() => Navigation.NavigateTo("/client/myratings")'>
                            <div class="stat-box">
                                <div class="fs-4 fw-bold text-success">0</div> <!-- Dynamic count pending -->
                                <div class="small text-muted">تقييمات</div>
                            </div>
                        </div>
                        <div class="col-4 cursor-pointer" @onclick='() => Navigation.NavigateTo("/client/favorites")'>
                            <div class="stat-box">
                                <div class="fs-4 fw-bold text-warning">0</div> <!-- Dynamic count pending -->
                                <div class="small text-muted">مفضلة</div>
                            </div>
                        </div>
                    </div>

                    <!-- Activity Links -->
                    <div class="list-group list-group-flush rounded-4 overflow-hidden mt-4 text-start shadow-sm">
                        <button class="list-group-item list-group-item-action d-flex align-items-center p-3 border-0" 
                                @onclick='() => Navigation.NavigateTo("/client/favorites")'>
                            <div class="bg-light-danger text-danger rounded-circle p-2 me-3" style="width:36px;height:36px;display:flex;align-items:center;justify-content:center;">
                                <i class="fa-solid fa-heart"></i>
                            </div>
                            <span class="fw-bold text-muted small">المفضلة</span>
                            <i class="fa-solid fa-chevron-left ms-auto text-muted opacity-50 x-small"></i>
                        </button>
                        <button class="list-group-item list-group-item-action d-flex align-items-center p-3 border-0" 
                                @onclick='() => Navigation.NavigateTo("/client/myratings")'>
                            <div class="bg-light-warning text-warning rounded-circle p-2 me-3" style="width:36px;height:36px;display:flex;align-items:center;justify-content:center;">
                                <i class="fa-solid fa-star"></i>
                            </div>
                            <span class="fw-bold text-muted small">تقييماتي</span>
                            <i class="fa-solid fa-chevron-left ms-auto text-muted opacity-50 x-small"></i>
                        </button>
                        <button class="list-group-item list-group-item-action d-flex align-items-center p-3 border-0" 
                                @onclick='() => Navigation.NavigateTo("/client/mycomments")'>
                            <div class="bg-light-primary text-primary rounded-circle p-2 me-3" style="width:36px;height:36px;display:flex;align-items:center;justify-content:center;">
                                <i class="fa-solid fa-comment"></i>
                            </div>
                            <span class="fw-bold text-muted small">تعليقاتي</span>
                            <i class="fa-solid fa-chevron-left ms-auto text-muted opacity-50 x-small"></i>
                        </button>
                        @if (profile.IsProvider)
                        {
                            <button class="list-group-item list-group-item-action d-flex align-items-center p-3 border-0" 
                                    @onclick='() => Navigation.NavigateTo("/provider/myposts")'>
                                <div class="bg-light-info text-info rounded-circle p-2 me-3" style="width:36px;height:36px;display:flex;align-items:center;justify-content:center;">
                                    <i class="fa-solid fa-newspaper"></i>
                                </div>
                                <span class="fw-bold text-muted small">إدارة المنشورات</span>
                                <i class="fa-solid fa-chevron-left ms-auto text-muted opacity-50 x-small"></i>
                            </button>
                        }
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="glass-card p-4 mt-3">
                    <h6 class="fw-bold mb-3">
                        <i class="fa-solid fa-address-card me-2 text-primary"></i>معلومات الاتصال
                    </h6>
                    
                    @if (!string.IsNullOrEmpty(profile.Email))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-envelope text-muted"></i>
                            <span>@profile.Email</span>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(profile.PhoneNumber))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-phone text-muted"></i>
                            <span>@profile.PhoneNumber</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(profileData?.ContactNumber) && profileData.ContactNumber != profile.PhoneNumber)
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-mobile-screen text-muted"></i>
                            <span>@profileData.ContactNumber</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(profile.CityName))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-location-dot text-muted"></i>
                            <span>@profile.CityName</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(profileData?.Location))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-map-marker-alt text-muted"></i>
                            <span>@profileData.Location</span>
                        </div>
                    }
                </div>

                <!-- Social Links -->
                @if (!string.IsNullOrEmpty(profile.WebsiteUrl) || 
                     !string.IsNullOrEmpty(profile.InstagramUrl) || 
                     !string.IsNullOrEmpty(profile.TwitterUrl) ||
                     !string.IsNullOrEmpty(profile.FacebookUrl) ||
                     !string.IsNullOrEmpty(profile.LinkedInUrl) ||
                     !string.IsNullOrEmpty(profile.TikTokUrl))
                {
                    <div class="glass-card p-4 mt-3">
                        <h6 class="fw-bold mb-3">
                            <i class="fa-solid fa-share-nodes me-2 text-primary"></i>روابط التواصل
                        </h6>
                        <div class="d-flex flex-wrap gap-2">
                            @if (!string.IsNullOrEmpty(profile.WebsiteUrl))
                            {
                                <a href="@profile.WebsiteUrl" target="_blank" class="social-link" title="الموقع الإلكتروني">
                                    <i class="fa-solid fa-globe"></i>
                                </a>
                            }

                            @if (!string.IsNullOrEmpty(profile.FacebookUrl))
                            {
                                <a href="@profile.FacebookUrl" target="_blank" class="social-link" title="فيسبوك">
                                    <i class="fa-brands fa-facebook-f"></i>
                                </a>
                            }

                            @if (!string.IsNullOrEmpty(profile.InstagramUrl))
                            {
                                <a href="https://instagram.com/@profile.InstagramUrl" target="_blank" class="social-link" title="انستجرام">
                                    <i class="fa-brands fa-instagram"></i>
                                </a>
                            }

                            @if (!string.IsNullOrEmpty(profile.TwitterUrl))
                            {
                                <a href="https://twitter.com/@profile.TwitterUrl" target="_blank" class="social-link" title="تويتر">
                                    <i class="fa-brands fa-x-twitter"></i>
                                </a>
                            }

                            @if (!string.IsNullOrEmpty(profile.LinkedInUrl))
                            {
                                <a href="@profile.LinkedInUrl" target="_blank" class="social-link" title="لينكد إن">
                                    <i class="fa-brands fa-linkedin-in"></i>
                                </a>
                            }

                            @if (!string.IsNullOrEmpty(profile.TikTokUrl))
                            {
                                <a href="https://tiktok.com/@@@profile.TikTokUrl" target="_blank" class="social-link" title="تيك توك">
                                    <i class="fa-brands fa-tiktok"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Right Content - Services & Activity -->
            <div class="col-lg-8">
                <!-- Services Section -->
                <div class="glass-card p-4 mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        @if (profile.IsProvider && profile.IsVerified)
                        {
                            <button class="btn btn-sm btn-primary" @onclick='() => Navigation.NavigateTo("/provider/createservice")'>
                                <i class="fa-solid fa-plus me-1"></i>إضافة خدمة
                            </button>
                        }
                    </div>

                    @if (userServices.Any())
                    {
                        <div class="row g-3">
                            @foreach (var service in userServices)
                            {
                                <div class="col-md-6">
                                    <div class="service-mini-card" @onclick="@(() => Navigation.NavigateTo($"/service/{service.Id}"))">
                                        <img src="@Khadamat.BlazorUI.Helpers.DefaultImages.GetServiceImage(service.CategoryName, service.Images?.FirstOrDefault())" 
                                             alt="@service.Title" class="service-mini-image" />
                                        <div class="service-mini-content">
                                            <h6 class="fw-bold mb-1">@service.Title</h6>
                                            <p class="text-muted small mb-2">@(service.Description?.Length > 80 ? service.Description.Substring(0, 80) + "..." : service.Description)</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge @(service.IsApproved ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning")">
                                                    @(service.IsApproved ? "نشط" : "قيد المراجعة")
                                                </span>
                                                @if (service.Price.HasValue)
                                                {
                                                    <span class="text-primary fw-bold">@service.Price.Value.ToString("N0") ج.م</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else if (profile.IsProvider && profile.IsVerified)
                    {
                        <div class="text-center py-5 opacity-50">
                            <i class="fa-solid fa-briefcase fs-1 mb-3"></i>
                            <p>لم تقم بإضافة أي خدمات بعد</p>
                            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/provider/createservice")'>
                                <i class="fa-solid fa-plus me-2"></i>إضافة خدمة جديدة
                            </button>
                        </div>
                    }
                    else if (profile.IsProvider)
                    {
                        <div class="text-center py-5">
                            <div class="glass-card bg-warning-subtle border-warning p-4 rounded-4">
                                <i class="fa-solid fa-user-clock fs-2 text-warning mb-3"></i>
                                <h6 class="fw-bold">طلبك قيد المراجعة</h6>
                                <p class="small text-muted mb-0">بمجرد توثيق حسابك من قبل الإدارة، ستتمكن من إضافة خدماتك.</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="p-4">
                                <i class="fa-solid fa-shop-lock fs-1 text-muted opacity-25 mb-3"></i>
                                <h6 class="fw-bold">هل أنت مزود خدمة؟</h6>
                                <p class="text-muted small mb-4">انضم إلى مجتمعنا وابدأ في عرض خدماتك لملايين المستخدمين.</p>
                                <button class="btn btn-primary-premium rounded-pill px-5" @onclick='() => Navigation.NavigateTo("/provider/apply")'>قدم الآن مجاناً</button>
                            </div>
                        </div>
                    }
                </div>

                <!-- Account Info -->
                <div class="glass-card p-4">
                    <h6 class="fw-bold mb-3">
                        <i class="fa-solid fa-info-circle me-2 text-primary"></i>معلومات الحساب
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <small class="text-muted d-block">تاريخ الانضمام</small>
                            <strong>@profile.CreatedAt.ToString("dd/MM/yyyy")</strong>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">حالة الحساب</small>
                            <span class="badge @(profile.IsActive ? "bg-success" : "bg-danger")">
                                @(profile.IsActive ? "نشط" : "غير نشط")
                            </span>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">البريد الإلكتروني</small>
                            <span class="badge @(profile.EmailConfirmed ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning")">
                                @(profile.EmailConfirmed ? "موثق" : "غير موثق")
                            </span>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">رقم الهاتف</small>
                            <span class="badge @(profile.PhoneNumberConfirmed ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning")">
                                @(profile.PhoneNumberConfirmed ? "موثق" : "غير موثق")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <p class="text-danger">فشل في تحميل بيانات الملف الشخصي</p>
            <button class="btn btn-primary" @onclick="LoadProfile">إعادة المحاولة</button>
        </div>
    }
</div>

