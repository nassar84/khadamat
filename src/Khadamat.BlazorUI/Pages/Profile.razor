@page "/profile"
@using Khadamat.Application.DTOs
@using Khadamat.BlazorUI.Services
@using Khadamat.BlazorUI.Services.Auth
@inject IAuthService AuthService
@inject ApiClient Api
@inject NavigationManager Navigation
@inject Khadamat.BlazorUI.State.AppState AppState

<div class="container py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">جاري التحميل...</span>
            </div>
        </div>
    }
    else if (profile != null)
    {
        <div class="row g-4">
            <!-- Left Sidebar - Profile Card -->
            <div class="col-lg-4">
                <div class="glass-card p-4 text-center">
                    <!-- Profile Photo -->
                    <div class="profile-photo-wrapper mb-3">
                        @if (!string.IsNullOrEmpty(profileData?.Photo))
                        {
                            <img src="@profileData.Photo" alt="Profile Photo" class="profile-photo" />
                        }
                        else
                        {
                            <div class="profile-photo-placeholder">
                                <i class="fa-solid fa-user fs-1"></i>
                            </div>
                        }
                    </div>

                    <!-- User Info -->
                    <h4 class="fw-bold mb-2">@profile.FullName</h4>
                    <p class="text-muted mb-1">@@@profile.UserName</p>
                    
                    @if (!string.IsNullOrEmpty(profileData?.BusinessName))
                    {
                        <div class="badge bg-primary-subtle text-primary mb-3">
                            <i class="fa-solid fa-briefcase me-1"></i> @profileData.BusinessName
                        </div>
                    }

                    @if (profile.IsVerified)
                    {
                        <div class="verified-badge mb-3">
                            <i class="fa-solid fa-check-circle text-success"></i>
                            <span class="text-success fw-bold">حساب موثق</span>
                        </div>
                    }
                    else if (profile.IsProvider)
                    {
                        <div class="badge bg-warning-subtle text-warning mb-3">
                            <i class="fa-solid fa-clock me-1"></i> قيد توثيق الهوية
                        </div>
                    }
                    else
                    {
                        <div class="mt-3">
                            <button class="btn btn-outline-primary btn-sm rounded-pill px-4" @onclick='() => Navigation.NavigateTo("/provider/apply")'>
                                <i class="fa-solid fa-briefcase me-2"></i>انضم كمزود خدمة
                            </button>
                        </div>
                    }

                    <!-- Bio -->
                    @if (!string.IsNullOrEmpty(profileData?.Bio))
                    {
                        <p class="text-muted small mt-3">@profileData.Bio</p>
                    }

                    <!-- Edit Button -->
                    <button class="btn btn-primary w-100 mt-3" @onclick="NavigateToSettings">
                        <i class="fa-solid fa-edit me-2"></i>تعديل الملف الشخصي
                    </button>

                    <!-- Statistics -->
                    <div class="row g-3 mt-3 text-center">
                        <div class="col-4">
                            <div class="stat-box">
                                <div class="fs-4 fw-bold text-primary">@userServices.Count</div>
                                <div class="small text-muted">خدمات</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-box">
                                <div class="fs-4 fw-bold text-success">0</div>
                                <div class="small text-muted">تقييمات</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-box">
                                <div class="fs-4 fw-bold text-warning">0</div>
                                <div class="small text-muted">إعجابات</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="glass-card p-4 mt-3">
                    <h6 class="fw-bold mb-3">
                        <i class="fa-solid fa-address-card me-2 text-primary"></i>معلومات الاتصال
                    </h6>
                    
                    @if (!string.IsNullOrEmpty(profile.Email))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-envelope text-muted"></i>
                            <span>@profile.Email</span>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(profile.PhoneNumber))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-phone text-muted"></i>
                            <span>@profile.PhoneNumber</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(profileData?.ContactNumber))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-mobile-screen text-muted"></i>
                            <span>@profileData.ContactNumber</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(profile.CityName))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-location-dot text-muted"></i>
                            <span>@profile.CityName</span>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(profileData?.Location))
                    {
                        <div class="contact-item">
                            <i class="fa-solid fa-map-marker-alt text-muted"></i>
                            <span>@profileData.Location</span>
                        </div>
                    }
                </div>

                <!-- Social Links -->
                @if (!string.IsNullOrEmpty(profileData?.WebsiteUrl) || 
                     !string.IsNullOrEmpty(profileData?.InstagramUrl) || 
                     !string.IsNullOrEmpty(profileData?.TwitterUrl))
                {
                    <div class="glass-card p-4 mt-3">
                        <h6 class="fw-bold mb-3">
                            <i class="fa-solid fa-share-nodes me-2 text-primary"></i>روابط التواصل
                        </h6>
                        <div class="d-flex gap-2">
                            @if (!string.IsNullOrEmpty(profileData.WebsiteUrl))
                            {
                                <a href="@profileData.WebsiteUrl" target="_blank" class="social-link">
                                    <i class="fa-solid fa-globe"></i>
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(profileData.InstagramUrl))
                            {
                                <a href="@profileData.InstagramUrl" target="_blank" class="social-link">
                                    <i class="fa-brands fa-instagram"></i>
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(profileData.TwitterUrl))
                            {
                                <a href="@profileData.TwitterUrl" target="_blank" class="social-link">
                                    <i class="fa-brands fa-twitter"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Right Content - Services & Activity -->
            <div class="col-lg-8">
                <!-- Services Section -->
                <div class="glass-card p-4 mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        @if (profile.IsProvider && profile.IsVerified)
                        {
                            <button class="btn btn-sm btn-primary" @onclick='() => Navigation.NavigateTo("/provider/createservice")'>
                                <i class="fa-solid fa-plus me-1"></i>إضافة خدمة
                            </button>
                        }
                    </div>

                    @if (userServices.Any())
                    {
                        <div class="row g-3">
                            @foreach (var service in userServices)
                            {
                                <div class="col-md-6">
                                    <div class="service-mini-card" @onclick="@(() => Navigation.NavigateTo($"/service/{service.Id}"))">
                                        @if (service.Images?.Any() == true)
                                        {
                                            <img src="@service.Images.First()" alt="@service.Title" class="service-mini-image" />
                                        }
                                        <div class="service-mini-content">
                                            <h6 class="fw-bold mb-1">@service.Title</h6>
                                            <p class="text-muted small mb-2">@(service.Description?.Length > 80 ? service.Description.Substring(0, 80) + "..." : service.Description)</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge @(service.IsApproved ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning")">
                                                    @(service.IsApproved ? "نشط" : "قيد المراجعة")
                                                </span>
                                                @if (service.Price.HasValue)
                                                {
                                                    <span class="text-primary fw-bold">@service.Price.Value.ToString("N0") ج.م</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else if (profile.IsProvider && profile.IsVerified)
                    {
                        <div class="text-center py-5 opacity-50">
                            <i class="fa-solid fa-briefcase fs-1 mb-3"></i>
                            <p>لم تقم بإضافة أي خدمات بعد</p>
                            <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/provider/createservice")'>
                                <i class="fa-solid fa-plus me-2"></i>إضافة خدمة جديدة
                            </button>
                        </div>
                    }
                    else if (profile.IsProvider)
                    {
                        <div class="text-center py-5">
                            <div class="glass-card bg-warning-subtle border-warning p-4 rounded-4">
                                <i class="fa-solid fa-user-clock fs-2 text-warning mb-3"></i>
                                <h6 class="fw-bold">طلبك قيد المراجعة</h6>
                                <p class="small text-muted mb-0">بمجرد توثيق حسابك من قبل الإدارة، ستتمكن من إضافة خدماتك.</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="p-4">
                                <i class="fa-solid fa-shop-lock fs-1 text-muted opacity-25 mb-3"></i>
                                <h6 class="fw-bold">هل أنت مزود خدمة؟</h6>
                                <p class="text-muted small mb-4">انضم إلى مجتمعنا وابدأ في عرض خدماتك لملايين المستخدمين.</p>
                                <button class="btn btn-primary-premium rounded-pill px-5" @onclick='() => Navigation.NavigateTo("/provider/apply")'>قدم الآن مجاناً</button>
                            </div>
                        </div>
                    }
                </div>

                <!-- Account Info -->
                <div class="glass-card p-4">
                    <h6 class="fw-bold mb-3">
                        <i class="fa-solid fa-info-circle me-2 text-primary"></i>معلومات الحساب
                    </h6>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <small class="text-muted d-block">تاريخ الانضمام</small>
                            <strong>@profile.CreatedAt.ToString("dd/MM/yyyy")</strong>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">حالة الحساب</small>
                            <span class="badge @(profile.IsActive ? "bg-success" : "bg-danger")">
                                @(profile.IsActive ? "نشط" : "غير نشط")
                            </span>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">البريد الإلكتروني</small>
                            <span class="badge @(profile.EmailConfirmed ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning")">
                                @(profile.EmailConfirmed ? "موثق" : "غير موثق")
                            </span>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted d-block">رقم الهاتف</small>
                            <span class="badge @(profile.PhoneNumberConfirmed ? "bg-success-subtle text-success" : "bg-warning-subtle text-warning")">
                                @(profile.PhoneNumberConfirmed ? "موثق" : "غير موثق")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <p class="text-danger">فشل في تحميل بيانات الملف الشخصي</p>
            <button class="btn btn-primary" @onclick="LoadProfile">إعادة المحاولة</button>
        </div>
    }
</div>

<style>
    .profile-photo-wrapper {
        width: 150px;
        height: 150px;
        margin: 0 auto;
    }

    .profile-photo, .profile-photo-placeholder {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid white;
        box-shadow: 0 8px 20px var(--theme-glow);
    }

    .profile-photo-placeholder {
        background: var(--theme-light);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--theme-primary);
    }

    .verified-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .stat-box {
        padding: 10px;
        border-radius: 12px;
        background: var(--theme-light);
        transition: transform 0.3s ease;
    }

    .stat-box:hover {
        transform: translateY(-3px);
    }

    .contact-item {
        padding: 10px 0;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .contact-item:last-child {
        border-bottom: none;
    }

    .contact-item i {
        width: 20px;
        text-align: center;
    }

    .social-link {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        background: var(--theme-light);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--theme-primary);
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .social-link:hover {
        transform: translateY(-3px);
        background: var(--theme-primary);
        color: white;
        box-shadow: 0 8px 20px var(--theme-glow);
    }

    .service-mini-card {
        display: flex;
        gap: 12px;
        padding: 12px;
        border-radius: 16px;
        border: 1px solid rgba(0,0,0,0.08);
        background: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .service-mini-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .service-mini-image {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        object-fit: cover;
        flex-shrink: 0;
    }

    .service-mini-content {
        flex: 1;
        min-width: 0;
    }
</style>

@code {
    private AuthResponse? profile;
    private ProviderProfileDto? profileData;
    private List<ServiceDto> userServices = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProfile();
    }

    private async Task LoadProfile()
    {
        isLoading = true;
        try
        {
            var profileResult = await AuthService.GetProfileAsync();
            if (profileResult?.Success == true && profileResult.Data != null)
            {
                profile = profileResult.Data;
                
                // Load provider profile data if exists
                try
                {
                    profileData = await Api.GetProviderProfileAsync(profile.Id);
                }
                catch
                {
                    // Provider profile doesn't exist yet, which is fine
                    profileData = null;
                }
                
                // Load user's services
                var servicesResult = await Api.GetServicesAsync(userId: profile.Id);
                userServices = servicesResult.Items;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToSettings()
    {
        Navigation.NavigateTo("/settings");
    }

    public class ProviderProfileDto
    {
        public string BusinessName { get; set; } = string.Empty;
        public string Bio { get; set; } = string.Empty;
        public string Photo { get; set; } = string.Empty;
        public string Location { get; set; } = string.Empty;
        public string ContactNumber { get; set; } = string.Empty;
        public string? WebsiteUrl { get; set; }
        public string? InstagramUrl { get; set; }
        public string? TwitterUrl { get; set; }
        public bool Verified { get; set; }
    }
}
