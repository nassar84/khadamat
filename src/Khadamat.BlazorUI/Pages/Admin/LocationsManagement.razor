@page "/admin/locationsmanagement"
@using Khadamat.Application.DTOs
@using Khadamat.BlazorUI.Services
@using Khadamat.BlazorUI.Components.Common
@inject ApiClient Api
@inject IJSRuntime JS

<div class="px-3 pt-3 pb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/admin" class="text-decoration-none text-muted">لوحة المدير</a></li>
                    <li class="breadcrumb-item active">المناطق والمدن</li>
                </ol>
            </nav>
            <h3 class="fw-bold mb-0">إدارة المناطق (شجري)</h3>
        </div>
        <button class="btn btn-primary-premium rounded-pill px-4" @onclick="() => AddItem(null)">
            <i class="fa-solid fa-plus me-2"></i> إضافة محافظة
        </button>
    </div>

    <div class="glass-card p-4">
        @if (isLoading)
        {
            <div class="text-center p-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2 text-muted">جاري تحميل المناطق...</p>
            </div>
        }
        else if (!treeNodes.Any())
        {
            <div class="text-center p-5 text-muted">
                <i class="fa-solid fa-map-location-dot fs-1 mb-3 opacity-25"></i>
                <p>لا توجد محافظات مسجلة</p>
            </div>
        }
        else
        {
            <div class="tree-container">
                @foreach (var node in treeNodes)
                {
                    <TreeViewItem TItem="LocationNode" 
                                 Item="node" 
                                 TextSelector="@(n => n.Name)"
                                 ChildrenSelector="@(n => n.Children)"
                                 IsInitiallyExpanded="false">
                        <IconTemplate Context="n">
                            @if (n.Level == 0) { <i class="fa-solid fa-map-location-dot text-primary"></i> }
                            else { <i class="fa-solid fa-city text-info"></i> }
                        </IconTemplate>
                        <ActionsTemplate Context="n">
                            @if (n.Level == 0)
                            {
                                <button class="btn btn-sm btn-light border text-success" title="إضافة مدينة" @onclick:stopPropagation="true" @onclick="() => AddItem(n)">
                                    <i class="fa-solid fa-plus x-small"></i>
                                </button>
                            }
                            <button class="btn btn-sm btn-light border" title="تعديل" @onclick:stopPropagation="true" @onclick="() => EditItem(n)">
                                <i class="fa-solid fa-pen x-small"></i>
                            </button>
                            <button class="btn btn-sm btn-light border text-danger" title="حذف" @onclick:stopPropagation="true" @onclick="() => DeleteItem(n)">
                                <i class="fa-solid fa-trash x-small"></i>
                            </button>
                        </ActionsTemplate>
                    </TreeViewItem>
                }
            </div>
        }
    </div>
</div>

<style>
    .tree-container {
        max-width: 800px;
    }
</style>

@code {
    private List<LocationNode> treeNodes = new();
    private bool isLoading = true;

    public class LocationNode
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string NameEn { get; set; } = "";
        public int Level { get; set; } // 0: Governorate, 1: City
        public int? ParentId { get; set; }
        public List<LocationNode> Children { get; set; } = new();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadTree();
    }

    private async Task LoadTree()
    {
        isLoading = true;
        treeNodes.Clear();
        
        var govs = await Api.GetGovernoratesAsync();
        foreach (var g in govs)
        {
            var gNode = new LocationNode { Id = g.Id, Name = g.NameAr, NameEn = g.NameEn, Level = 0 };
            
            var cities = await Api.GetCitiesAsync(g.Id);
            foreach (var city in cities)
            {
                gNode.Children.Add(new LocationNode { Id = city.Id, Name = city.NameAr, Level = 1, ParentId = g.Id });
            }
            treeNodes.Add(gNode);
        }
        
        isLoading = false;
    }

    private async Task AddItem(LocationNode? parent)
    {
        if (parent == null)
        {
            var nameAr = await JS.InvokeAsync<string>("prompt", "اسم المحافظة (عربي):");
            if (string.IsNullOrEmpty(nameAr)) return;
            var nameEn = await JS.InvokeAsync<string>("prompt", "اسم المحافظة (إنجليزي):");
            await Api.CreateGovernorateAsync(new GovernorateDto { NameAr = nameAr, NameEn = nameEn ?? "", Approved = true });
        }
        else
        {
            var nameAr = await JS.InvokeAsync<string>("prompt", $"اسم المدينة الجديدة في {parent.Name}:");
            if (string.IsNullOrEmpty(nameAr)) return;
            await Api.CreateCityAsync(new CityDto { NameAr = nameAr, GovernorateId = parent.Id, Approved = true });
        }
        
        await LoadTree();
    }

    private async Task EditItem(LocationNode node)
    {
        var nameAr = await JS.InvokeAsync<string>("prompt", "تعديل الاسم (عربي):", node.Name);
        if (string.IsNullOrEmpty(nameAr)) return;

        if (node.Level == 0)
        {
            var nameEn = await JS.InvokeAsync<string>("prompt", "تعديل الاسم (إنجليزي):", node.NameEn);
            await Api.UpdateGovernorateAsync(node.Id, new GovernorateDto { Id = node.Id, NameAr = nameAr, NameEn = nameEn ?? "", Approved = true });
        }
        else
        {
            await Api.UpdateCityAsync(node.Id, new CityDto { Id = node.Id, NameAr = nameAr, GovernorateId = node.ParentId ?? 0, Approved = true });
        }

        await LoadTree();
    }

    private async Task DeleteItem(LocationNode node)
    {
        if (!await JS.InvokeAsync<bool>("confirm", $"هل أنت متأكد من حذف {node.Name}؟")) return;

        if (node.Level == 0) await Api.DeleteGovernorateAsync(node.Id);
        else await Api.DeleteCityAsync(node.Id);

        await LoadTree();
    }
}
