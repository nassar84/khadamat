@page "/admin/services"
@using Khadamat.Application.DTOs
@using Khadamat.BlazorUI.Services
@using Khadamat.BlazorUI.Services.Admin
@inject ApiClient Api
@inject IAdminService AdminService
@inject NavigationManager Navigation

<PageTitle>إدارة الخدمات</PageTitle>

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">إدارة الخدمات</h2>
        <p class="text-muted small">عرض وإدارة كافة الخدمات المسجلة في النظام</p>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary rounded-pill"><i class="fa-solid fa-filter me-1"></i> تصفية</button>
        <button class="btn btn-primary rounded-pill"><i class="fa-solid fa-plus me-1"></i> إضافة خدمة</button>
    </div>
</div>

<div class="glass-card table-responsive p-0 overflow-hidden">
    <table class="table table-hover align-middle mb-0">
        <thead class="bg-light">
            <tr>
                <th class="border-0 p-3">الخدمة</th>
                <th class="border-0 p-3">مقدم الخدمة</th>
                <th class="border-0 p-3">التصنيف</th>
                <th class="border-0 p-3">السعر</th>
                <th class="border-0 p-3">الحالة</th>
                <th class="border-0 p-3 text-end">إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @if (services == null)
            {
                <tr>
                    <td colspan="6" class="text-center p-5">
                        <div class="spinner-border text-primary" role="status"></div>
                    </td>
                </tr>
            }
            else if (!services.Any())
            {
                <tr>
                    <td colspan="6" class="text-center p-5 text-muted">
                        لا توجد خدمات متاحة حالياً
                    </td>
                </tr>
            }
            else
            {
                @foreach (var service in services)
                {
                    <tr>
                        <td class="p-3">
                            <div class="d-flex align-items-center gap-3">
                                <img src="@(service.Images.FirstOrDefault() ?? "https://ui-avatars.com/api/?name="+service.Title)" 
                                     class="rounded-3 object-fit-cover" width="50" height="50" />
                                <div>
                                    <h6 class="fw-bold mb-0 text-truncate" style="max-width: 200px;">@service.Title</h6>
                                    <small class="text-muted"><i class="fa-solid fa-star text-warning"></i> @service.Rating.ToString("0.0")</small>
                                </div>
                            </div>
                        </td>
                        <td class="p-3">
                            <div class="d-flex align-items-center gap-2">
                                <img src="@(service.ProviderPhoto ?? "https://ui-avatars.com/api/?name=P")" 
                                     class="rounded-circle" width="30" height="30" />
                                <span class="small">@service.ProviderName</span>
                            </div>
                        </td>
                        <td class="p-3">
                            <span class="badge bg-light text-dark border">@service.CategoryName</span>
                            @if(!string.IsNullOrEmpty(service.SubCategoryName)) {
                                <i class="fa-solid fa-chevron-left x-small mx-1 opacity-50"></i>
                                <span class="badge bg-light text-dark border">@service.SubCategoryName</span>
                            }
                        </td>
                        <td class="p-3 fw-bold text-primary">
                            @service.Price?.ToString("N0") ج.م
                        </td>
                        <td class="p-3">
                            @if (service.IsApproved)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">معتمد</span>
                            }
                            else
                            {
                                <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">قيد المراجعة</span>
                            }
                        </td>
                        <td class="p-3 text-end">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-icon" data-bs-toggle="dropdown"><i class="fa-solid fa-ellipsis-vertical"></i></button>
                                <ul class="dropdown-menu border-0 shadow-lg rounded-4">
                                    <li><a class="dropdown-item" href="/service/@service.Id" target="_blank"><i class="fa-solid fa-eye me-2 text-muted"></i> عرض</a></li>
                                    <li><a class="dropdown-item" @onclick="() => Approve(service)"><i class="fa-solid fa-check me-2 text-success"></i> اعتماد</a></li>
                                    <li><a class="dropdown-item" @onclick="() => Reject(service)"><i class="fa-solid fa-xmark me-2 text-danger"></i> رفض</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="#"><i class="fa-solid fa-trash me-2"></i> حذف</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (totalPages > 1)
{
    <div class="d-flex justify-content-center mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link rounded-circle mx-1" @onclick="() => LoadPage(currentPage - 1)"><i class="fa-solid fa-chevron-right"></i></button>
                </li>
                @for (int i = 1; i <= totalPages; i++)
                {
                    var pageIndex = i;
                    <li class="page-item @(currentPage == pageIndex ? "active" : "")">
                        <button class="page-link rounded-circle mx-1" @onclick="() => LoadPage(pageIndex)">@pageIndex</button>
                    </li>
                }
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <button class="page-link rounded-circle mx-1" @onclick="() => LoadPage(currentPage + 1)"><i class="fa-solid fa-chevron-left"></i></button>
                </li>
            </ul>
        </nav>
    </div>
}

@code {
    private List<ServiceDto>? services;
    private int currentPage = 1;
    private int totalPages = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadServices();
    }

    private async Task LoadServices()
    {
        try
        {
            var result = await Api.GetServicesAsync(page: currentPage, isApproved: null);
            services = result.Items;
            totalPages = result.TotalPages;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading services: {ex.Message}");
        }
    }

    private async Task LoadPage(int page)
    {
        if (page < 1 || page > totalPages) return;
        currentPage = page;
        await LoadServices();
    }

    private async Task Approve(ServiceDto service)
    {
        await AdminService.ApproveService(service.Id);
        service.IsApproved = true; // Optimistic update
        StateHasChanged();
    }

    private async Task Reject(ServiceDto service)
    {
        await AdminService.RejectService(service.Id);
        service.IsApproved = false;
        StateHasChanged();
    }
}
