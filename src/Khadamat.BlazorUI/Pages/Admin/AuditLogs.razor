@page "/admin/logs"
@using Khadamat.Application.DTOs
@using Khadamat.BlazorUI.Services
@inject ApiClient Api

<div class="px-3 pt-3 pb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/admin" class="text-decoration-none text-muted">لوحة المدير</a></li>
                    <li class="breadcrumb-item active">سجلات النظام</li>
                </ol>
            </nav>
            <h3 class="fw-bold mb-0">سجلات النظام</h3>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-danger rounded-pill px-3"><i class="fa-solid fa-trash-can me-2"></i> مسح السجلات القديمة</button>
            <button class="btn btn-light rounded-pill px-3"><i class="fa-solid fa-download me-2"></i> تصدير CSV</button>
        </div>
    </div>

    <!-- Filters -->
    <div class="glass-card p-3 mb-4 d-flex flex-wrap gap-3 align-items-center">
        <select class="form-select rounded-pill border-0 bg-light px-4 w-auto">
            <option>جميع العمليات</option>
            <option>تسجيل دخول</option>
            <option>تعديل بيانات</option>
            <option>حذف</option>
            <option>قبول/رفض</option>
        </select>
        <select class="form-select rounded-pill border-0 bg-light px-4 w-auto">
            <option>آخر 24 ساعة</option>
            <option>آخر 7 أيام</option>
            <option>آخر شهر</option>
        </select>
        <div class="flex-grow-1"></div>
        <input type="text" class="form-control rounded-pill border-0 bg-light px-4 w-auto" placeholder="بحث في السجلات...">
    </div>

    <!-- Logs Table -->
    <div class="glass-card overflow-hidden rounded-4 border-0 shadow-sm animate-up">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">المستخدم</th>
                        <th>العملية</th>
                        <th>التفاصيل</th>
                        <th>التاريخ</th>
                        <th class="text-center">IP</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in logs)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="fw-bold">@log.User</div>
                                </div>
                            </td>
                            <td>
                                <span class="badge rounded-pill @GetActionBadge(log.Action)">@log.Action</span>
                            </td>
                            <td class="small">@log.Details</td>
                            <td class="small text-muted">@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td class="text-center small font-monospace text-muted">@log.IpAddress</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="p-3 bg-light text-center">
            <button class="btn btn-link text-decoration-none small fw-bold">تحميل المزيد من السجلات</button>
        </div>
    </div>
</div>

@code {
    private List<LogEntry> logs = new()
    {
        new() { User = "admin@khadamat.com", Action = "قبول مزود", Details = "الموافقة على طلب انضمام: أحمد محمود (سباك)", Timestamp = DateTime.Now.AddMinutes(-45), IpAddress = "192.168.1.10" },
        new() { User = "mod@khadamat.com", Action = "تعديل فئة", Details = "تغيير مسمى فئة من 'صيانة' إلى 'صيانة منزلية'", Timestamp = DateTime.Now.AddHours(-2), IpAddress = "192.168.1.15" },
        new() { User = "system", Action = "تحديث تلقائي", Details = "تحديث أسعار العملات في النظام", Timestamp = DateTime.Now.AddHours(-5), IpAddress = "127.0.0.1" },
        new() { User = "admin@khadamat.com", Action = "حذف إعلان", Details = "حذف إعلان منتهي: خصم العام الجديد", Timestamp = DateTime.Now.AddDays(-1), IpAddress = "192.168.1.10" },
        new() { User = "user123@gmail.com", Action = "تسجيل دخول", Details = "دخول ناجح للمنصة", Timestamp = DateTime.Now.AddDays(-1).AddHours(-2), IpAddress = "105.106.2.44" }
    };

    private string GetActionBadge(string action) => action switch
    {
        "حذف" => "bg-danger",
        "قبول مزود" => "bg-success",
        "تعديل فئة" => "bg-warning text-dark",
        "تسجيل دخول" => "bg-info",
        _ => "bg-secondary"
    };

    public class LogEntry
    {
        public string User { get; set; } = "";
        public string Action { get; set; } = "";
        public string Details { get; set; } = "";
        public DateTime Timestamp { get; set; }
        public string IpAddress { get; set; } = "";
    }
}
