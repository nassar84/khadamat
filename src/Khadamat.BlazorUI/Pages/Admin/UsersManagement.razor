@if (showDeleteConfirm && userToDelete != null)
{
    <ConfirmDialog Show="true" 
                   Title="حذف المستخدم" 
                   Message="@($"هل أنت متأكد من حذف المستخدم {userToDelete.FullName}؟ لا يمكن التراجع عن هذا الإجراء.")"
                   OnConfirm="HandleDeleteConfirm"
                   OnCancel="() => { showDeleteConfirm = false; userToDelete = null; }" />
}

@code {
    private List<UserDto> users = new();
    private string SearchTerm { get; set; } = "";
    private string SelectedRole { get; set; } = "";
    private string SelectedStatus { get; set; } = "";
    private string CurrentUserRole { get; set; } = "";
    private List<GovernorateDto> governorates = new();
    private List<CityDto> cities = new();
    private bool isLoading = true;
    
    // User Form State
    private bool showUserForm = false;
    private string userFormMode = "View"; // "Create", "Edit", "View"
    private UserDto? selectedUser;
    private bool isSaving = false;
    private string formErrorMessage = "";

    // Password State
    private bool showPasswordModal = false;
    private bool showNewPassword = false;
    private string newPassword = "";

    // Delete State
    private bool showDeleteConfirm = false;
    private UserDto? userToDelete;

    // Permissions State
    private bool showPermissionsModal = false;
    private List<PermissionModel> AvailablePermissions = new()
    {
        new() { Id = "edit_service_info", Name = "تعديل بيانات الخدمة", Description = "تعديل الاسم والوصف والموقع والسعر", IsGranted = true },
        new() { Id = "manage_gallery", Name = "إدارة معرض الصور", Description = "إضافة وحذف الصور من معرض الخدمة", IsGranted = true },
        new() { Id = "post_updates", Name = "نشر التحديثات", Description = "إضافة منشورات جديدة في صفحة الخدمة", IsGranted = false },
        new() { Id = "manage_reviews", Name = "إدارة التقييمات", Description = "الرد على العملاء أو إخفاء التقييمات المسيئة", IsGranted = false }
    };

    [CascadingParameter]
    private Task<AuthenticationState> authStateTask { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        try 
        {
            var authState = await authStateTask;
            CurrentUserRole = authState.User.FindFirst(c => c.Type == System.Security.Claims.ClaimTypes.Role || c.Type == "role")?.Value ?? "";
            
            // Parallel loading
            var govTask = Api.GetGovernoratesAsync();
            var cityTask = Api.GetCitiesAsync();
            var userTask = AdminService.GetAllUsers();

            await Task.WhenAll(govTask, cityTask, userTask);

            governorates = govTask.Result;
            cities = cityTask.Result;
            users = userTask.Result;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users management data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private IEnumerable<UserDto> FilteredUsers => users
        .Where(u => (string.IsNullOrEmpty(SearchTerm) || 
                    (u.FullName?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false) || 
                    (u.Email?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (u.UserName?.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ?? false)) &&
                    (string.IsNullOrEmpty(SelectedRole) || u.Role == SelectedRole) &&
                    (string.IsNullOrEmpty(SelectedStatus) || (SelectedStatus == "active" ? u.IsActive : !u.IsActive)));

    private string GetRoleBadgeClass(string role) => role switch
    {
        "SuperAdmin" => "badge-superadmin",
        "SystemAdmin" => "badge-systemadmin",
        _ => "badge-user"
    };

    private string GetRoleName(string role) => role switch
    {
        "SuperAdmin" => "مدير خارق",
        "SystemAdmin" => "مدير نظام",
        _ => "مستخدم"
    };

    private async Task ToggleUserStatus(UserDto user)
    {
        try
        {
            await AdminService.ToggleUserStatus(user.Id);
            user.IsActive = !user.IsActive; 
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "خطأ في تغيير الحالة: " + ex.Message);
        }
    }

    private void AddNewUser() 
    {
        selectedUser = null;
        formErrorMessage = "";
        userFormMode = "Create";
        showUserForm = true;
    }

    private void OpenEditUser(UserDto user)
    {
        selectedUser = user;
        formErrorMessage = "";
        userFormMode = "Edit";
        showUserForm = true;
    }

    private void OpenViewDetails(UserDto user)
    {
        selectedUser = user;
        userFormMode = "View";
        showUserForm = true;
    }

    private void CloseUserForm() => showUserForm = false;

    private async Task HandleUserFormSave(UserForm.UserFormModel model)
    {
        formErrorMessage = "";
        isSaving = true;

        try
        {
            if (userFormMode == "Create")
            {
                var createDto = new CreateUserDto
                {
                    FullName = model.FullName,
                    Email = model.Email,
                    Password = model.Password,
                    Role = model.Role,
                    PhoneNumber = model.PhoneNumber,
                    CityId = model.CityId
                };

                var createdUser = await AdminService.CreateUser(createDto);
                if (createdUser != null)
                {
                    users.Insert(0, createdUser);
                    showUserForm = false;
                    await JS.InvokeVoidAsync("alert", $"تم إضافة المستخدم {createdUser.FullName} بنجاح");
                }
            }
            else if (userFormMode == "Edit" && selectedUser != null)
            {
                var updateDto = new UserDto
                {
                     Id = model.Id,
                     FullName = model.FullName,
                     UserName = model.UserName,
                     Email = model.Email,
                     PhoneNumber = model.PhoneNumber,
                     Role = model.Role,
                     IsActive = model.IsActive,
                     CityId = model.CityId,
                     Gender = model.Gender,
                     ProfileImageUrl = model.ProfileImageUrl,
                     Bio = model.Bio,
                     WebsiteUrl = model.WebsiteUrl,
                     InstagramUrl = model.InstagramUrl,
                     TwitterUrl = model.TwitterUrl,
                     FacebookUrl = model.FacebookUrl,
                     LinkedInUrl = model.LinkedInUrl,
                     TikTokUrl = model.TikTokUrl
                };

                await AdminService.UpdateUser(selectedUser.Id, updateDto);
                
                // Update Local Instance
                var index = users.FindIndex(u => u.Id == selectedUser.Id);
                if (index != -1) users[index] = updateDto;

                showUserForm = false;
            }
        }
        catch (Exception ex)
        {
            formErrorMessage = "خطأ في الحفظ: " + ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private void OpenChangePassword(UserDto user)
    {
        selectedUser = user;
        newPassword = "";
        showNewPassword = false;
        showPasswordModal = true;
    }

    private async Task HandleChangePassword()
    {
        if (selectedUser == null || string.IsNullOrWhiteSpace(newPassword)) return;
        
        try
        {
            await AdminService.ChangePassword(new ChangePasswordDto 
            { 
                UserId = selectedUser.Id, 
                NewPassword = newPassword 
            });
            
            await JS.InvokeVoidAsync("alert", "تم تغيير كلمة المرور بنجاح");
            showPasswordModal = false;
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "فشل تغيير كلمة المرور: " + ex.Message);
        }
    }

    private void ConfirmDelete(UserDto user) 
    {
        userToDelete = user;
        showDeleteConfirm = true;
    }

    private async Task HandleDeleteConfirm()
    {
        if (userToDelete == null) return;
        
        try 
        {
            await AdminService.DeleteUser(userToDelete.Id);
            users.Remove(userToDelete);
            showDeleteConfirm = false;
            userToDelete = null;
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "خطأ في الحذف: " + ex.Message);
        }
    }

    private void ClearFilters()
    {
        SearchTerm = "";
        SelectedRole = "";
        SelectedStatus = "";
    }

    private void OpenPermissions(UserDto user)
    {
        selectedUser = user;
        showPermissionsModal = true;
    }

    private void SavePermissions()
    {
        showPermissionsModal = false;
        // logic...
    }

    public class PermissionModel
    {
        public string Id { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public bool IsGranted { get; set; }
    }
}
