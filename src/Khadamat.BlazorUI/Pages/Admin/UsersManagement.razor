<!-- Change Password Modal -->
@if (selectedUser != null && showPasswordModal)
{
    <div class="modal-overlay">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 450px;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0 text-info">
                    <i class="fa-solid fa-key me-2"></i>تغيير كلمة المرور
                </h5>
                <button class="btn-close" @onclick="() => showPasswordModal = false"></button>
            </div>
            
            <div class="mb-4 text-center bg-light p-3 rounded-4">
                <div class="small text-muted mb-1">تغيير كلمة المرور للمستخدم:</div>
                <div class="fw-bold">@selectedUser.FullName</div>
                <div class="small text-muted">@selectedUser.Email</div>
            </div>

            <div class="mb-3">
                <label class="form-label small fw-bold">كلمة المرور الجديدة</label>
                <div class="position-relative">
                    <input type="@(showNewPassword ? "text" : "password")" class="form-control rounded-pill px-4" 
                           @bind="newPassword" placeholder="أدخل كلمة المرور الجديدة">
                    <button class="btn btn-sm position-absolute top-50 end-0 translate-middle-y me-3 border-0" 
                            type="button" @onclick="() => showNewPassword = !showNewPassword">
                        <i class="fa-solid @(showNewPassword ? "fa-eye-slash" : "fa-eye") text-muted"></i>
                    </button>
                </div>
                <div class="x-small text-muted mt-2 ps-3">
                    <i class="fa-solid fa-circle-info me-1"></i>
                    سيتم تغيير كلمة المرور فوراً دون الحاجة لكلمة المرور القديمة.
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button class="btn btn-primary-premium flex-grow-1 rounded-pill" 
                        @onclick="HandleChangePassword" 
                        disabled="@(string.IsNullOrWhiteSpace(newPassword) || newPassword.Length < 6)">
                    تحديث كلمة المرور
                </button>
                <button class="btn btn-light flex-grow-1 rounded-pill" @onclick="() => showPasswordModal = false">إلغاء</button>
            </div>
        </div>
    </div>
}

