@page "/admin/users"
@page "/admin/usersmanagement"
@using Khadamat.Application.DTOs
@using Khadamat.BlazorUI.Services
@using Khadamat.BlazorUI.Services.Admin
@using Khadamat.BlazorUI.State
@using Khadamat.BlazorUI.Shared.Components
@inject ApiClient Api
@inject IAdminService AdminService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AppState State

<div class="px-3 pt-3 pb-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/admin" class="text-decoration-none text-muted">لوحة المدير</a></li>
                    <li class="breadcrumb-item active">إدارة المستخدمين</li>
                </ol>
            </nav>
            <h3 class="fw-bold mb-0">إدارة المستخدمين</h3>
        </div>
        <button class="btn btn-primary-premium rounded-pill px-4" @onclick="AddNewUser">
            <i class="fa-solid fa-user-plus me-2"></i> إضافة مستخدم
        </button>
    </div>

    <!-- Filters -->
    <div class="glass-card p-3 mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <div class="search-box position-relative">
                    <i class="fa-solid fa-magnifying-glass position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                    <input type="text" class="form-control rounded-pill ps-5 border-0 bg-light" placeholder="ابحث بالاسم أو البريد..." @bind="SearchTerm" @bind:event="oninput">
                </div>
            </div>
            <div class="col-md-2">
                <select class="form-select rounded-pill border-0 bg-light px-3" @bind="SelectedRole">
                    <option value="">جميع الأدوار</option>
                    <option value="User">عملاء</option>
                    @if (CurrentUserRole == "SuperAdmin")
                    {
                        <option value="SystemAdmin">مديري نظام</option>
                        <option value="SuperAdmin">مديري سوبر</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select rounded-pill border-0 bg-light px-3" @bind="SelectedStatus">
                    <option value="">جميع الحالات</option>
                    <option value="active">نشط</option>
                    <option value="inactive">معطل</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-light rounded-pill px-3 w-100" @onclick="ClearFilters">
                    <i class="fa-solid fa-rotate-left me-1"></i> إعادة ضبط
                </button>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="glass-card rounded-4 border-0 shadow-sm animate-up" style="overflow: visible;">
        <div class="table-responsive" style="overflow: visible;">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">المستخدم</th>
                        <th>الدور</th>
                        <th>الحالة</th>
                        <th class="text-center" style="width: 200px;">العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in FilteredUsers)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="@Khadamat.BlazorUI.Helpers.DefaultImages.GetUserAvatar(user.FullName, user.Gender, user.ProfileImageUrl)" 
                                         class="avatar-circle me-3" 
                                         style="width: 45px; height: 45px; border-radius: 12px; object-fit: cover;" 
                                         alt="@user.FullName" />
                                    <div>
                                        <div class="fw-bold">@user.FullName</div>
                                        <div class="small text-muted">@user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge rounded-pill @GetRoleBadgeClass(user.Role)">@GetRoleName(user.Role)</span>
                            </td>
                            <td>
                                <div class="form-check form-switch p-0">
                                    <input class="form-check-input ms-0" type="checkbox" checked="@user.IsActive"
                                           @onchange="() => ToggleUserStatus(user)">
                                    <span class="ms-2 small @(user.IsActive ? "text-success" : "text-danger")">
                                        @(user.IsActive ? "نشط" : "معطل")
                                    </span>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-icon btn-light-success border-0 rounded-circle me-1" title="عرض" @onclick="() => OpenViewDetails(user)">
                                        <i class="fa-solid fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-icon btn-light-primary border-0 rounded-circle me-1" title="تعديل" @onclick="() => OpenEditUser(user)">
                                        <i class="fa-solid fa-user-pen"></i>
                                    </button>
                                    <button class="btn btn-sm btn-icon btn-light-info border-0 rounded-circle me-1" title="كلمة المرور" @onclick="() => OpenChangePassword(user)">
                                        <i class="fa-solid fa-key"></i>
                                    </button>
                                    @if (CurrentUserRole == "SuperAdmin" || user.Role == "User")
                                    {
                                        <button class="btn btn-sm btn-icon btn-light-danger border-0 rounded-circle" title="حذف" @onclick="() => ConfirmDelete(user)">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Shared User Form Component -->
<UserForm Show="showUserForm" 
          Mode="@userFormMode" 
          User="selectedUser" 
          Governorates="governorates" 
          Cities="cities" 
          CurrentUserRole="@CurrentUserRole" 
          IsSaving="isSaving" 
          ErrorMessage="@formErrorMessage"
          OnSave="HandleUserFormSave" 
          OnCancel="CloseUserForm" />

<!-- Edit User Modal -->



<!-- Permissions Modal -->
@if (selectedUser != null && showPermissionsModal)
{
    <div class="modal-overlay">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 500px;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">صلاحيات @selectedUser.FullName</h5>
                <button class="btn-close" @onclick="() => showPermissionsModal = false"></button>
            </div>
            
            <div class="alert alert-info small border-0 bg-primary-subtle text-primary">
                هذه الإعدادات مخصصة لمزودي الخدمات فقط حالياً.
            </div>

            <div class="permissions-list mb-4">
                @foreach (var perm in AvailablePermissions)
                {
                    <div class="d-flex align-items-center justify-content-between p-3 border-bottom">
                        <div>
                            <div class="fw-bold small">@perm.Name</div>
                            <div class="x-small text-muted">@perm.Description</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" @bind="perm.IsGranted">
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary flex-grow-1 rounded-pill" @onclick="SavePermissions">حفظ </button>
                <button class="btn btn-light flex-grow-1 rounded-pill" @onclick="() => showPermissionsModal = false">إلغاء</button>
            </div>
        </div>
    </div>
}

