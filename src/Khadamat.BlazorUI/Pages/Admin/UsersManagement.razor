@page "/admin/users"
@page "/admin/usersmanagement"
@using Khadamat.Application.DTOs
@using Khadamat.BlazorUI.Services
@using Khadamat.BlazorUI.Services.Admin
@using Khadamat.BlazorUI.State
@inject ApiClient Api
@inject IAdminService AdminService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AppState State

<div class="px-3 pt-3 pb-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/admin" class="text-decoration-none text-muted">لوحة المدير</a></li>
                    <li class="breadcrumb-item active">إدارة المستخدمين</li>
                </ol>
            </nav>
            <h3 class="fw-bold mb-0">إدارة المستخدمين</h3>
        </div>
        <button class="btn btn-primary-premium rounded-pill px-4" @onclick="AddNewUser">
            <i class="fa-solid fa-user-plus me-2"></i> إضافة مستخدم
        </button>
    </div>

    <!-- Filters -->
    <div class="glass-card p-3 mb-4">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <div class="search-box position-relative">
                    <i class="fa-solid fa-magnifying-glass position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                    <input type="text" class="form-control rounded-pill ps-5 border-0 bg-light" placeholder="ابحث بالاسم أو البريد..." @bind="SearchTerm" @bind:event="oninput">
                </div>
            </div>
            <div class="col-md-2">
                <select class="form-select rounded-pill border-0 bg-light px-3" @bind="SelectedRole">
                    <option value="">جميع الأدوار</option>
                    <option value="User">عملاء</option>
                    @if (CurrentUserRole == "SuperAdmin")
                    {
                        <option value="SystemAdmin">مديري نظام</option>
                        <option value="SuperAdmin">مديري سوبر</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select rounded-pill border-0 bg-light px-3" @bind="SelectedStatus">
                    <option value="">جميع الحالات</option>
                    <option value="active">نشط</option>
                    <option value="inactive">معطل</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-light rounded-pill px-3 w-100" @onclick="ClearFilters">
                    <i class="fa-solid fa-rotate-left me-1"></i> إعادة ضبط
                </button>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="glass-card rounded-4 border-0 shadow-sm animate-up" style="overflow: visible;">
        <div class="table-responsive" style="overflow: visible;">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">المستخدم</th>
                        <th>الدور</th>
                        <th>الحالة</th>
                        <th class="text-center" style="width: 200px;">العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in FilteredUsers)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <img src="@Khadamat.BlazorUI.Helpers.DefaultImages.GetUserAvatar(user.FullName, user.Gender, user.ProfileImageUrl)" 
                                         class="avatar-circle me-3" 
                                         style="width: 45px; height: 45px; border-radius: 12px; object-fit: cover;" 
                                         alt="@user.FullName" />
                                    <div>
                                        <div class="fw-bold">@user.FullName</div>
                                        <div class="small text-muted">@user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge rounded-pill @GetRoleBadgeClass(user.Role)">@GetRoleName(user.Role)</span>
                            </td>
                            <td>
                                <div class="form-check form-switch p-0">
                                    <input class="form-check-input ms-0" type="checkbox" checked="@user.IsActive"
                                           @onchange="() => ToggleUserStatus(user)">
                                    <span class="ms-2 small @(user.IsActive ? "text-success" : "text-danger")">
                                        @(user.IsActive ? "نشط" : "معطل")
                                    </span>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-icon btn-light-success border-0 rounded-circle me-1" title="عرض" @onclick="() => OpenViewDetails(user)">
                                        <i class="fa-solid fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-icon btn-light-primary border-0 rounded-circle me-1" title="تعديل" @onclick="() => OpenEditUser(user)">
                                        <i class="fa-solid fa-user-pen"></i>
                                    </button>
                                    <button class="btn btn-sm btn-icon btn-light-info border-0 rounded-circle me-1" title="كلمة المرور" @onclick="() => OpenChangePassword(user)">
                                        <i class="fa-solid fa-key"></i>
                                    </button>
                                    @if (CurrentUserRole == "SuperAdmin" || user.Role == "User")
                                    {
                                        <button class="btn btn-sm btn-icon btn-light-danger border-0 rounded-circle" title="حذف" @onclick="() => ConfirmDelete(user)">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add New User Modal -->
@if (showAddUserModal)
{
    <div class="modal-overlay">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 550px; max-height: 90vh; overflow-y: auto;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">إضافة مستخدم جديد</h5>
                <button class="btn-close" @onclick="() => showAddUserModal = false"></button>
            </div>
            
            @if (!string.IsNullOrEmpty(addUserError))
            {
                <div class="alert alert-danger small border-0 mb-3">@addUserError</div>
            }

            <div class="row g-3">
                <div class="col-md-12">
                    <label class="form-label small fw-bold">الاسم الكامل</label>
                    <input type="text" class="form-control rounded-pill px-4" @bind="newUserModel.FullName" placeholder="أدخل الاسم الكامل">
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">البريد الإلكتروني</label>
                    <input type="email" class="form-control rounded-pill px-4" @bind="newUserModel.Email" placeholder="example@domain.com">
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">رقم الهاتف</label>
                    <input type="text" class="form-control rounded-pill px-4" @bind="newUserModel.PhoneNumber" placeholder="01xxxxxxxxx">
                </div>

                <div class="col-md-12">
                    <label class="form-label small fw-bold">كلمة المرور</label>
                    <input type="password" class="form-control rounded-pill px-4" @bind="newUserModel.Password" placeholder="أدخل كلمة المرور">
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">الدور الوظيفي</label>
                    <select class="form-select rounded-pill px-4" @bind="newUserModel.Role">
                        <option value="User">مستخدم</option>
                        @if (CurrentUserRole == "SuperAdmin")
                        {
                            <option value="SystemAdmin">مدير نظام</option>
                            <option value="SuperAdmin">مدير خارق</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">المحافظة</label>
                    <select class="form-select rounded-pill px-4" @onchange="OnAddUserGovernorateChanged">
                        <option value="">اختر المحافظة...</option>
                        @foreach (var gov in governorates)
                        {
                            <option value="@gov.Id">@gov.NameAr</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">المدينة</label>
                    <select class="form-select rounded-pill px-4" @bind="newUserModel.CityId">
                        <option value="">اختر المدينة...</option>
                        @foreach (var city in filteredCities)
                        {
                            <option value="@city.Id">@city.NameAr</option>
                        }
                    </select>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button class="btn btn-primary flex-grow-1 rounded-pill" @onclick="SaveNewUser" disabled="@isSaving">
                    @if (isSaving) { <span class="spinner-border spinner-border-sm me-2"></span> }
                    إنشاء الحساب
                </button>
                <button class="btn btn-light flex-grow-1 rounded-pill" @onclick="() => showAddUserModal = false" disabled="@isSaving">إلغاء</button>
            </div>
        </div>
    </div>
}

<!-- Edit User Modal -->
@if (selectedUser != null && showEditModal)
{
    <div class="modal-overlay" @onclick="() => showEditModal = false">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 650px; max-height: 85vh; overflow-y: auto;" @onclick:stopPropagation="true">
            <div class="d-flex justify-content-between align-items-center mb-4 sticky-top bg-white pb-3" style="margin: -1rem -1rem 1rem -1rem; padding: 1rem 1rem 0.5rem 1rem; border-bottom: 1px solid #e9ecef;">
                <h5 class="fw-bold mb-0">تعديل بيانات المستخدم</h5>
                <button class="btn-close" @onclick="() => showEditModal = false"></button>
            </div>
            
            <div class="row g-3">
                <div class="col text-center mb-3">
                    <div class="position-relative d-inline-block">
                        <img src="@Khadamat.BlazorUI.Helpers.DefaultImages.GetUserAvatar(editUserModel.FullName, editUserModel.Gender, editUserModel.ProfileImageUrl)" 
                             class="rounded-circle border border-4 border-white shadow-sm" width="100" height="100" style="object-fit: cover;" />
                        <button class="btn btn-sm btn-primary rounded-circle position-absolute bottom-0 end-0" @onclick="() => showImageEdit = !showImageEdit">
                            <i class="fa-solid fa-camera"></i>
                        </button>
                    </div>
                    @if (showImageEdit)
                    {
                        <div class="mt-2 animate-fade-in">
                            <input type="text" class="form-control form-control-sm rounded-pill" @bind="editUserModel.ProfileImageUrl" placeholder="رابط الصورة الجديد..." />
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">الاسم الكامل</label>
                    <input type="text" class="form-control rounded-pill px-4" @bind="editUserModel.FullName">
                </div>
                <div class="col-md-6">
                    <label class="form-label small fw-bold">اسم المستخدم</label>
                    <input type="text" class="form-control rounded-pill px-4" @bind="editUserModel.UserName">
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">البريد الإلكتروني</label>
                    <input type="email" class="form-control rounded-pill px-4" @bind="editUserModel.Email">
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">رقم الهاتف</label>
                    <input type="text" class="form-control rounded-pill px-4" @bind="editUserModel.PhoneNumber">
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">الدور الوظيفي</label>
                    <select class="form-select rounded-pill px-4" @bind="editUserModel.Role">
                        <option value="User">مستخدم</option>
                        @if (CurrentUserRole == "SuperAdmin")
                        {
                            <option value="SystemAdmin">مدير نظام</option>
                            <option value="SuperAdmin">مدير خارق</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">الجنس</label>
                    <select class="form-select rounded-pill px-4" @bind="editUserModel.Gender">
                        <option value="">غير محدد</option>
                        <option value="Male">ذكر</option>
                        <option value="Female">أنثى</option>
                    </select>
                </div>

                <div class="col-md-6 d-flex align-items-end mb-2">
                    <div class="form-check form-switch w-100 bg-light p-2 rounded-pill ps-5">
                        <input class="form-check-input ms-1" type="checkbox" @bind="editUserModel.IsActive" id="activeSwitch">
                        <label class="form-check-label small fw-bold" for="activeSwitch">حساب نشط</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">المحافظة</label>
                    <select class="form-select rounded-pill px-4" @onchange="OnEditUserGovernorateChanged" value="@selectedEditGovernorateId">
                        <option value="">اختر المحافظة...</option>
                        @foreach (var gov in governorates)
                        {
                            <option value="@gov.Id">@gov.NameAr</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label small fw-bold">المدينة</label>
                    <select class="form-select rounded-pill px-4" @bind="editUserModel.CityId">
                        <option value="">اختر المدينة...</option>
                        @foreach (var city in editFilteredCities)
                        {
                            <option value="@city.Id">@city.NameAr</option>
                        }
                    </select>
                </div>

                <div class="col-12">
                    <label class="form-label small fw-bold">نبذة (Bio)</label>
                    <textarea class="form-control rounded-4 px-4" rows="3" @bind="editUserModel.Bio"></textarea>
                </div>

                 <div class="col-12 mt-3">
                    <h6 class="fw-bold border-bottom pb-2">روابط التواصل الاجتماعي</h6>
                </div>

                <div class="col-md-6">
                    <label class="form-label x-small text-muted">الموقع الإلكتروني</label>
                    <input type="text" class="form-control rounded-pill px-4 bg-light small" @bind="editUserModel.WebsiteUrl">
                </div>
                <div class="col-md-6">
                    <label class="form-label x-small text-muted">فيسبوك</label>
                    <input type="text" class="form-control rounded-pill px-4 bg-light small" @bind="editUserModel.FacebookUrl">
                </div>
                <div class="col-md-6">
                    <label class="form-label x-small text-muted">انستجرام</label>
                    <input type="text" class="form-control rounded-pill px-4 bg-light small" @bind="editUserModel.InstagramUrl">
                </div>
                <div class="col-md-6">
                    <label class="form-label x-small text-muted">تويتر (X)</label>
                    <input type="text" class="form-control rounded-pill px-4 bg-light small" @bind="editUserModel.TwitterUrl">
                </div>
                <div class="col-md-6">
                    <label class="form-label x-small text-muted">لينكد إن</label>
                    <input type="text" class="form-control rounded-pill px-4 bg-light small" @bind="editUserModel.LinkedInUrl">
                </div>
                <div class="col-md-6">
                    <label class="form-label x-small text-muted">تيك توك</label>
                    <input type="text" class="form-control rounded-pill px-4 bg-light small" @bind="editUserModel.TikTokUrl">
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <button class="btn btn-primary flex-grow-1 rounded-pill" @onclick="SaveUserChanges" disabled="@isSaving">
                    @if (isSaving) { <span class="spinner-border spinner-border-sm me-2"></span> }
                    حفظ التغييرات
                </button>
                <button class="btn btn-light flex-grow-1 rounded-pill" @onclick="() => showEditModal = false" disabled="@isSaving">إلغاء</button>
            </div>
        </div>
    </div>
}


<!-- Permissions Modal -->
@if (selectedUser != null && showPermissionsModal)
{
    <div class="modal-overlay">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 500px;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">صلاحيات @selectedUser.FullName</h5>
                <button class="btn-close" @onclick="() => showPermissionsModal = false"></button>
            </div>
            
            <div class="alert alert-info small border-0 bg-primary-subtle text-primary">
                هذه الإعدادات مخصصة لمزودي الخدمات فقط حالياً.
            </div>

            <div class="permissions-list mb-4">
                @foreach (var perm in AvailablePermissions)
                {
                    <div class="d-flex align-items-center justify-content-between p-3 border-bottom">
                        <div>
                            <div class="fw-bold small">@perm.Name</div>
                            <div class="x-small text-muted">@perm.Description</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" @bind="perm.IsGranted">
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary flex-grow-1 rounded-pill" @onclick="SavePermissions">حفظ </button>
                <button class="btn btn-light flex-grow-1 rounded-pill" @onclick="() => showPermissionsModal = false">إلغاء</button>
            </div>
        </div>
    </div>
}

<!-- View User Details Modal -->
@if (selectedUser != null && showDetailsModal)
{
    <div class="modal-overlay" @onclick="() => showDetailsModal = false">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 600px; max-height: 85vh; overflow-y: auto;" @onclick:stopPropagation="true">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0 text-success">
                    <i class="fa-solid fa-id-card me-2"></i>تفاصيل @selectedUser.FullName
                </h5>
                <button class="btn-close" @onclick="() => showDetailsModal = false"></button>
            </div>
            
            <div class="row g-3">
                <!-- User Basic Info -->
                <div class="col-12">
                    <div class="d-flex align-items-center p-3 bg-light rounded-4 mb-2">
                        <img src="@Khadamat.BlazorUI.Helpers.DefaultImages.GetUserAvatar(selectedUser.FullName, selectedUser.Gender, selectedUser.ProfileImageUrl)" 
                             class="rounded-circle me-3" width="60" height="60" style="object-fit: cover;" />
                        <div>
                            <div class="fw-bold fs-5">@selectedUser.FullName</div>
                            <div class="small text-muted">@selectedUser.Email</div>
                            <span class="badge rounded-pill @GetRoleBadgeClass(selectedUser.Role) mt-1">@GetRoleName(selectedUser.Role)</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="p-3 bg-white border rounded-4">
                        <small class="text-muted d-block">إسم المستخدم</small>
                        <div class="fw-bold">@(selectedUser.UserName ?? "---")</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 bg-white border rounded-4">
                        <small class="text-muted d-block">رقم الهاتف</small>
                        <div class="fw-bold">@(selectedUser.PhoneNumber ?? "---")</div>
                    </div>
                </div>

                <!-- Bio -->
                <div class="col-12">
                    <div class="p-3 bg-light rounded-4">
                        <label class="small fw-bold text-muted mb-2">النبذة التعريفية</label>
                        <p class="mb-0">@(string.IsNullOrEmpty(selectedUser.Bio) ? "لا توجد نبذة تعريفية متاحة." : selectedUser.Bio)</p>
                    </div>
                </div>

                <!-- Social Media Links -->
                <div class="col-12">
                    <h6 class="fw-bold border-bottom pb-2 mb-3">روابط التواصل الاجتماعي</h6>
                    <div class="row g-2">
                        @if (!string.IsNullOrEmpty(selectedUser.WebsiteUrl))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-2 bg-light rounded-3">
                                    <i class="fa-solid fa-globe text-primary me-2"></i>
                                    <div class="flex-grow-1 overflow-hidden">
                                        <small class="text-muted d-block">الموقع</small>
                                        <a href="@selectedUser.WebsiteUrl" target="_blank" class="small text-truncate d-block">@selectedUser.WebsiteUrl</a>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(selectedUser.FacebookUrl))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-2 bg-light rounded-3">
                                    <i class="fa-brands fa-facebook text-primary me-2"></i>
                                    <div class="flex-grow-1 overflow-hidden">
                                        <small class="text-muted d-block">فيسبوك</small>
                                        <a href="@selectedUser.FacebookUrl" target="_blank" class="small text-truncate d-block">@selectedUser.FacebookUrl</a>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(selectedUser.InstagramUrl))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-2 bg-light rounded-3">
                                    <i class="fa-brands fa-instagram text-danger me-2"></i>
                                    <div class="flex-grow-1 overflow-hidden">
                                        <small class="text-muted d-block">انستجرام</small>
                                        <span class="small">@(selectedUser.InstagramUrl?.StartsWith("@") == true ? selectedUser.InstagramUrl : "@" + selectedUser.InstagramUrl)</span>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(selectedUser.TwitterUrl))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-2 bg-light rounded-3">
                                    <i class="fa-brands fa-x-twitter text-dark me-2"></i>
                                    <div class="flex-grow-1 overflow-hidden">
                                        <small class="text-muted d-block">تويتر</small>
                                        <span class="small">@(selectedUser.TwitterUrl?.StartsWith("@") == true ? selectedUser.TwitterUrl : "@" + selectedUser.TwitterUrl)</span>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(selectedUser.LinkedInUrl))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-2 bg-light rounded-3">
                                    <i class="fa-brands fa-linkedin text-primary me-2"></i>
                                    <div class="flex-grow-1 overflow-hidden">
                                        <small class="text-muted d-block">لينكد إن</small>
                                        <a href="@selectedUser.LinkedInUrl" target="_blank" class="small text-truncate d-block">@selectedUser.LinkedInUrl</a>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(selectedUser.TikTokUrl))
                        {
                            <div class="col-md-6">
                                <div class="d-flex align-items-center p-2 bg-light rounded-3">
                                    <i class="fa-brands fa-tiktok text-dark me-2"></i>
                                    <div class="flex-grow-1 overflow-hidden">
                                        <small class="text-muted d-block">تيك توك</small>
                                        <span class="small">@(selectedUser.TikTokUrl?.StartsWith("@") == true ? selectedUser.TikTokUrl : "@" + selectedUser.TikTokUrl)</span>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (string.IsNullOrEmpty(selectedUser.WebsiteUrl) && 
                             string.IsNullOrEmpty(selectedUser.FacebookUrl) && 
                             string.IsNullOrEmpty(selectedUser.InstagramUrl) &&
                             string.IsNullOrEmpty(selectedUser.TwitterUrl) &&
