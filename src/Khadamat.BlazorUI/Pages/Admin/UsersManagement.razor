@page "/admin/users"
@page "/admin/usersmanagement"
@using Khadamat.Application.DTOs
@using Khadamat.BlazorUI.Services
@using Khadamat.BlazorUI.Services.Admin
@using Khadamat.BlazorUI.State
@inject ApiClient Api
@inject IAdminService AdminService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AppState State

<div class="px-3 pt-3 pb-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/admin" class="text-decoration-none text-muted">لوحة المدير</a></li>
                    <li class="breadcrumb-item active">إدارة المستخدمين</li>
                </ol>
            </nav>
            <h3 class="fw-bold mb-0">إدارة المستخدمين</h3>
        </div>
        <button class="btn btn-primary-premium rounded-pill px-4" @onclick="AddNewUser">
            <i class="fa-solid fa-user-plus me-2"></i> إضافة مستخدم
        </button>
    </div>

    <!-- Filters -->
    <div class="glass-card p-3 mb-4 d-flex flex-wrap gap-3 align-items-center justify-content-between">
        <div class="search-box position-relative flex-grow-1" style="max-width: 400px;">
            <i class="fa-solid fa-magnifying-glass position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
            <input type="text" class="form-control rounded-pill ps-5 border-0 bg-light" placeholder="ابحث بالاسم أو البريد..." @bind="SearchTerm" @bind:event="oninput">
        </div>
        <div class="d-flex gap-2">
            <select class="form-select rounded-pill border-0 bg-light px-4" style="width: auto;" @bind="SelectedRole">
                <option value="">جميع الأدوار</option>
                <option value="User">مستخدم</option>
                <option value="SystemAdmin">مدير نظام</option>
                <option value="SuperAdmin">مدير خارق</option>
            </select>
            <button class="btn btn-light rounded-pill px-3" @onclick="ClearFilters">
                <i class="fa-solid fa-rotate-left"></i>
            </button>
        </div>
    </div>

    <!-- Users Table -->
    <div class="glass-card overflow-hidden rounded-4 border-0 shadow-sm animate-up">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4" style="width: 80px;">إجراءات</th>
                        <th class="ps-4">المستخدم</th>
                        <th>الدور</th>
                        <th>الحالة</th>
                        <th>تاريخ الانضمام</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in FilteredUsers)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="dropdown">
                                    <button class="btn btn-icon btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa-solid fa-ellipsis-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu shadow-lg border-0 rounded-3">
                                        <li>
                                            <button class="dropdown-item py-2" @onclick="() => OpenEditUser(user)">
                                                <i class="fa-solid fa-user-pen me-2 text-primary"></i>
                                                تعديل البيانات
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item py-2" @onclick="() => OpenChangeRole(user)">
                                                <i class="fa-solid fa-user-shield me-2 text-warning"></i>
                                                تغيير الدور
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item py-2" @onclick="() => OpenPermissions(user)">
                                                <i class="fa-solid fa-key me-2 text-success"></i>
                                                الصلاحيات
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <button class="dropdown-item py-2 text-danger" @onclick="() => ConfirmDelete(user)">
                                                <i class="fa-solid fa-trash-can me-2"></i>
                                                حذف
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3">
                                        @user.FullName.Substring(0, Math.Min(2, user.FullName.Length)).ToUpper()
                                    </div>
                                    <div>
                                        <div class="fw-bold">@user.FullName</div>
                                        <div class="small text-muted">@user.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge rounded-pill @GetRoleBadgeClass(user.Role)">@GetRoleName(user.Role)</span>
                            </td>
                            <td>
                                <div class="form-check form-switch p-0">
                                    <input class="form-check-input ms-0" type="checkbox" checked="@user.IsActive"
                                           @onchange="() => ToggleUserStatus(user)">
                                    <span class="ms-2 small @(user.IsActive ? "text-success" : "text-danger")">
                                        @(user.IsActive ? "نشط" : "غير نشط")
                                    </span>
                                </div>
                            </td>
                            <td class="small text-muted">@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add New User Modal -->
@if (showAddUserModal)
{
    <div class="modal-overlay">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 500px;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">إضافة مستخدم جديد</h5>
                <button class="btn-close" @onclick="() => showAddUserModal = false"></button>
            </div>
            
            @if (!string.IsNullOrEmpty(addUserError))
            {
                <div class="alert alert-danger small border-0 mb-3">@addUserError</div>
            }

            <div class="mb-3">
                <label class="form-label small fw-bold">الاسم الكامل</label>
                <input type="text" class="form-control rounded-pill px-4" @bind="newUserModel.FullName" placeholder="أدخل الاسم الكامل">
            </div>

            <div class="mb-3">
                <label class="form-label small fw-bold">البريد الإلكتروني</label>
                <input type="email" class="form-control rounded-pill px-4" @bind="newUserModel.Email" placeholder="example@domain.com">
            </div>

            <div class="mb-3">
                <label class="form-label small fw-bold">كلمة المرور</label>
                <input type="password" class="form-control rounded-pill px-4" @bind="newUserModel.Password" placeholder="أدخل كلمة المرور (6 أحرف على الأقل)">
            </div>

            <div class="mb-4">
                <label class="form-label small fw-bold">الدور الوظيفي</label>
                <select class="form-select rounded-pill px-4" @bind="newUserModel.Role">
                    <option value="User">مستخدم</option>
                    <option value="SystemAdmin">مدير نظام</option>
                    @if (State.UserRole == "SuperAdmin")
                    {
                        <option value="SuperAdmin">مدير خارق</option>
                    }
                </select>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary flex-grow-1 rounded-pill" @onclick="SaveNewUser" disabled="@isSaving">
                    @if (isSaving) { <span class="spinner-border spinner-border-sm me-2"></span> }
                    إضافة المستخدم
                </button>
                <button class="btn btn-light flex-grow-1 rounded-pill" @onclick="() => showAddUserModal = false" disabled="@isSaving">إلغاء</button>
            </div>
        </div>
    </div>
}

<!-- Edit User Modal -->
@if (selectedUser != null && showEditModal)
{
    <div class="modal-overlay">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 500px;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">تعديل المستخدم</h5>
                <button class="btn-close" @onclick="() => showEditModal = false"></button>
            </div>
            
            <div class="mb-3">
                <label class="form-label small fw-bold">الاسم الكامل</label>
                <input type="text" class="form-control rounded-pill px-4" @bind="editUserModel.FullName">
            </div>

            <div class="mb-3">
                <label class="form-label small fw-bold">البريد الإلكتروني</label>
                <input type="email" class="form-control rounded-pill px-4" @bind="editUserModel.Email" readonly>
                <div class="x-small text-muted mt-1 ps-2">البريد الإلكتروني للقراءة فقط حالياً.</div>
            </div>

            <div class="mb-4">
                <label class="form-label small fw-bold">الدور الوظيفي</label>
                <select class="form-select rounded-pill px-4" @bind="editUserModel.Role">
                    <option value="User">مستخدم</option>
                    <option value="SystemAdmin">مدير نظام</option>
                    @if (State.UserRole == "SuperAdmin")
                    {
                        <option value="SuperAdmin">مدير خارق</option>
                    }
                </select>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary flex-grow-1 rounded-pill" @onclick="SaveUserChanges">
                    @if (isSaving) { <span class="spinner-border spinner-border-sm me-2"></span> }
                    حفظ التغييرات
                </button>
                <button class="btn btn-light flex-grow-1 rounded-pill" @onclick="() => showEditModal = false" disabled="@isSaving">إلغاء</button>
            </div>
        </div>
    </div>
}

<!-- Permissions Modal -->
@if (selectedUser != null && showPermissionsModal)
{
    <div class="modal-overlay">
        <div class="glass-card p-4 rounded-4 w-100 mx-3 animate-pop" style="max-width: 500px;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="fw-bold mb-0">صلاحيات @selectedUser.FullName</h5>
                <button class="btn-close" @onclick="() => showPermissionsModal = false"></button>
            </div>
            
            <div class="alert alert-info small border-0 bg-primary-subtle text-primary">
                هذه الإعدادات مخصصة لمزودي الخدمات فقط حالياً.
            </div>

            <div class="permissions-list mb-4">
                @foreach (var perm in AvailablePermissions)
                {
                    <div class="d-flex align-items-center justify-content-between p-3 border-bottom">
                        <div>
                            <div class="fw-bold small">@perm.Name</div>
                            <div class="x-small text-muted">@perm.Description</div>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" @bind="perm.IsGranted">
                        </div>
                    </div>
                }
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary flex-grow-1 rounded-pill" @onclick="SavePermissions">حفظ </button>
                <button class="btn btn-light flex-grow-1 rounded-pill" @onclick="() => showPermissionsModal = false">إلغاء</button>
            </div>
        </div>
    </div>
}

<style>
    .avatar-circle {
        transition: transform 0.2s;
    }
    
    .table tr:hover .avatar-circle {
        transform: scale(1.1);
    }

    .badge-superadmin { background: rgba(147, 51, 234, 0.1); color: #9333ea; }
    .badge-systemadmin { background: rgba(239, 68, 68, 0.1); color: #ef4444; }
    .badge-user { background: rgba(59, 130, 246, 0.1); color: #3b82f6; }

    .btn-icon {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #64748b;
        transition: all 0.2s;
    }
    .btn-icon:hover {
        background: rgba(0,0,0,0.05);
        color: var(--primary);
    }

    .modal-overlay {
        position: fixed; inset: 0; z-index: 2000;
        background: rgba(0,0,0,0.4);
        backdrop-filter: blur(5px);
        display: flex; align-items: center; justify-content: center;
    }

    .animate-pop {
        animation: pop 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    @@keyframes pop {
        from { transform: scale(0.8); opacity: 0; }
        to { transform: scale(1); opacity: 1; }
    }
</style>

@code {
    private List<UserDto> users = new();
    private string SearchTerm { get; set; } = "";
    private string SelectedRole { get; set; } = "";
    
    private UserDto? selectedUser;
    private bool showPermissionsModal = false;
    
    // Add New User Modal
    private bool showAddUserModal = false;
    private CreateUserDto newUserModel = new();
    private string addUserError = string.Empty;

    private List<PermissionModel> AvailablePermissions = new()
    {
        new() { Id = "edit_service_info", Name = "تعديل بيانات الخدمة", Description = "تعديل الاسم والوصف والموقع والسعر", IsGranted = true },
        new() { Id = "manage_gallery", Name = "إدارة معرض الصور", Description = "إضافة وحذف الصور من معرض الخدمة", IsGranted = true },
        new() { Id = "post_updates", Name = "نشر التحديثات", Description = "إضافة منشورات جديدة في صفحة الخدمة", IsGranted = false },
        new() { Id = "manage_reviews", Name = "إدارة التقييمات", Description = "الرد على العملاء أو إخفاء التقييمات المسيئة", IsGranted = false }
    };

    [CascadingParameter]
    private Task<AuthenticationState> authStateTask { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await authStateTask;
        try 
        {
            users = await AdminService.GetAllUsers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
            // Fallback to empty or mock if needed
        }
    }

    private IEnumerable<UserDto> FilteredUsers => users
        .Where(u => (string.IsNullOrEmpty(SearchTerm) || u.FullName.Contains(SearchTerm) || u.Email.Contains(SearchTerm)) &&
                    (string.IsNullOrEmpty(SelectedRole) || u.Role == SelectedRole) &&
                    (State.UserRole == "SuperAdmin" || u.Role != "SuperAdmin")); // Safety filtering

    private string GetRoleBadgeClass(string role) => role switch
    {
        "SuperAdmin" => "badge-superadmin",
        "SystemAdmin" => "badge-systemadmin",
        _ => "badge-user"
    };

    private string GetRoleName(string role) => role switch
    {
        "SuperAdmin" => "مدير خارق",
        "SystemAdmin" => "مدير نظام",
        _ => "مستخدم"
    };

    private async Task ToggleUserStatus(UserDto user)
    {
        try
        {
            await AdminService.ToggleUserStatus(user.Id);
            user.IsActive = !user.IsActive; // Optimistic update, but API returns state too so we could use that.
        }
        catch { /* Handle error */ }
    }

    private void AddNewUser() 
    {
        newUserModel = new CreateUserDto { Role = "User" };
        addUserError = string.Empty;
        showAddUserModal = true;
    }

    private async Task SaveNewUser()
    {
        addUserError = string.Empty;
        isSaving = true;

        try
        {
            // Basic validation
            if (string.IsNullOrWhiteSpace(newUserModel.FullName))
            {
                addUserError = "الاسم الكامل مطلوب";
                return;
            }
            if (string.IsNullOrWhiteSpace(newUserModel.Email))
            {
                addUserError = "البريد الإلكتروني مطلوب";
                return;
            }
            if (string.IsNullOrWhiteSpace(newUserModel.Password) || newUserModel.Password.Length < 6)
            {
                addUserError = "كلمة المرور يجب أن تكون 6 أحرف على الأقل";
                return;
            }

            var createdUser = await AdminService.CreateUser(newUserModel);
            if (createdUser != null)
            {
                users.Add(createdUser);
                showAddUserModal = false;
                await JS.InvokeVoidAsync("alert", $"تم إضافة المستخدم {createdUser.FullName} بنجاح");
            }
        }
        catch (HttpRequestException ex)
        {
            // Try to extract error message from response
            addUserError = ex.Message.Contains("already") || ex.Message.Contains("مستخدم") 
                ? "البريد الإلكتروني مستخدم بالفعل" 
                : "حدث خطأ أثناء إضافة المستخدم";
        }
        catch (Exception ex)
        {
            addUserError = "حدث خطأ غير متوقع: " + ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }
    
    private void ClearFilters()
    {
        SearchTerm = "";
        SelectedRole = "";
    }

    private void OpenPermissions(UserDto user)
    {
        selectedUser = user;
        showPermissionsModal = true;
    }

    private void SavePermissions()
    {
        // Save logic
        showPermissionsModal = false;
        // Show success toast
    }

    private bool showEditModal = false;
    private bool isSaving = false;
    private UserDto editUserModel = new();

    private void OpenEditUser(UserDto user)
    {
        selectedUser = user;
        editUserModel = new UserDto
        {
            Id = user.Id,
            FullName = user.FullName,
            Email = user.Email,
            Role = user.Role
        };
        showEditModal = true;
    }

    private async Task SaveUserChanges()
    {
        if (selectedUser == null) return;
        
        isSaving = true;
        try
        {
            // Update details
            await AdminService.UpdateUser(selectedUser.Id, editUserModel);
            
            // Update role if changed
            if (selectedUser.Role != editUserModel.Role)
            {
                await AdminService.UpdateUserRole(selectedUser.Id, editUserModel.Role);
            }

            // Sync UI
            selectedUser.FullName = editUserModel.FullName;
            selectedUser.Role = editUserModel.Role;
            
            showEditModal = false;
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "خطأ في حفظ البيانات: " + ex.Message);
        }
        finally
        {
            isSaving = false;
        }
    }

    private void OpenChangeRole(UserDto user) => OpenEditUser(user);

    private async Task ConfirmDelete(UserDto user) 
    {
        if (user.Role == "SuperAdmin" && State.UserRole != "SuperAdmin") return;

        if (await JS.InvokeAsync<bool>("confirm", $"هل أنت متأكد من حذف المستخدم {user.FullName}؟"))
        {
            await AdminService.DeleteUser(user.Id);
            users.Remove(user);
        }
    }

    public class PermissionModel
    {
        public string Id { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public bool IsGranted { get; set; }
    }
}
