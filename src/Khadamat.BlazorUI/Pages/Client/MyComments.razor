@page "/client/mycomments"
@using Khadamat.BlazorUI.Services
@inject ApiClient Api
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="px-3 pt-3 pb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0">تعليقاتي</h3>
            <p class="text-muted small">التعليقات التي قمت بكتابتها على منشورات المزودين</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (!comments.Any())
    {
        <div class="glass-card p-5 text-center">
            <i class="fa-regular fa-comments display-1 text-muted opacity-25 mb-3"></i>
            <h5>لا توجد تعليقات</h5>
            <p class="text-muted">تفاعل مع المنشورات لتظهر تعليقاتك هنا</p>
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-3">
            @foreach (var comment in comments)
            {
                <div class="glass-card p-3 animate-up">
                    <div class="d-flex align-items-center gap-2 mb-2 bg-light p-2 rounded-3">
                        <div class="avatar-placeholder rounded-circle bg-white d-flex align-items-center justify-content-center border" style="width:30px;height:30px;">
                            <i class="fa-solid fa-store text-primary x-small"></i>
                        </div>
                        <div class="flex-grow-1">
                            <span class="fw-bold x-small">@comment.ProviderName</span>
                            <span class="text-muted x-small ms-1">نشر: "@comment.PostContentSnippet"</span>
                        </div>
                    </div>

                    <p class="mb-2 text-dark small">@comment.Text</p>
                    
                    <div class="d-flex justify-content-between align-items-center border-top pt-2">
                        <span class="text-muted x-small">@comment.CreatedAt.ToString("dd MMM, hh:mm tt")</span>
                        <button class="btn btn-sm text-danger p-0" @onclick="() => DeleteComment(comment)">
                            <i class="fa-solid fa-trash-can me-1"></i> حذف
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<MyCommentDto> comments = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try 
        {
            comments = await Api.GetMyCommentsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteComment(MyCommentDto comment)
    {
        if (await JS.InvokeAsync<bool>("confirm", "هل أنت متأكد من حذف هذا التعليق؟"))
        {
            var success = await Api.DeleteCommentAsync(comment.Id);
            if (success)
            {
                comments.Remove(comment);
            }
        }
    }
}
