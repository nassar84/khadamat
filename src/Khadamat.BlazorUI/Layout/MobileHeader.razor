@implements IDisposable
@using Khadamat.BlazorUI.State
@inject AppState State
@inject NavigationManager Navigation
@inject IJSRuntime JS

<header class="mobile-header-premium">
    <div class="header-glass-content">
        <div class="header-left">
            <button class="menu-toggle-btn-glass" @onclick="ToggleSidebar">
                <i class="fa-solid fa-bars-staggered"></i>
            </button>
        </div>

        <div class="header-center" @onclick='() => Navigation.NavigateTo("/")'>
            <div class="logo-wrapper-mobile">
                @if (!string.IsNullOrEmpty(State.AppLogo))
                {
                    <img src="@State.AppLogo" class="logo-img-mobile" alt="Logo" style="height: 28px; width: auto;" />
                }
                else
                {
                    <i class="fa-solid fa-bolt-lightning logo-icon-glow"></i>
                }
                <span class="logo-text-premium">@State.AppName</span>
            </div>
        </div>

        <div class="header-right">
            <AuthorizeView>
                <Authorized>
                    <div class="user-profile-header-premium" @onclick='() => Navigation.NavigateTo("/profile")'>
                        <div class="user-meta-header d-none d-sm-flex">
                            <span class="user-name-header">@State.UserName</span>
                        </div>
                        <div class="avatar-header-wrapper">
                            <img src="@State.UserImageUrl" alt="Profile" class="user-header-avatar-premium" />
                            <div class="online-dot-small"></div>
                        </div>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <button class="btn-login-minimal" @onclick='() => Navigation.NavigateTo("/login")'>
                        <i class="fa-solid fa-right-to-bracket"></i>
                    </button>
                </NotAuthorized>
            </AuthorizeView>
            
            <div class="theme-switcher-mobile me-2">
                <button class="icon-btn-minimal" @onclick="ToggleThemeMenu">
                    <i class="fa-solid fa-palette"></i>
                </button>
                @if (isThemeMenuOpen)
                {
                    <div class="theme-popover-mobile animate-up">
                        <div class="theme-grid-mobile">
                            <button class="theme-dot-mobile default @(State.CurrentTheme == "default" ? "active" : "")" @onclick='() => HandleSetTheme("default")'></button>
                            <button class="theme-dot-mobile sunset @(State.CurrentTheme == "sunset" ? "active" : "")" @onclick='() => HandleSetTheme("sunset")'></button>
                            <button class="theme-dot-mobile ocean @(State.CurrentTheme == "ocean" ? "active" : "")" @onclick='() => HandleSetTheme("ocean")'></button>
                            <button class="theme-dot-mobile forest @(State.CurrentTheme == "forest" ? "active" : "")" @onclick='() => HandleSetTheme("forest")'></button>
                            <button class="theme-dot-mobile lavender @(State.CurrentTheme == "lavender" ? "active" : "")" @onclick='() => HandleSetTheme("lavender")'></button>
                            <button class="theme-dot-mobile royal @(State.CurrentTheme == "royal" ? "active" : "")" @onclick='() => HandleSetTheme("royal")'></button>
                        </div>
                    </div>
                }
            </div>

            <div class="icon-btn-minimal" @onclick='() => Navigation.NavigateTo("/notifications")'>
                <i class="fa-solid fa-bell"></i>
                @if (State.NotificationCount > 0)
                {
                    <span class="badge-dot"></span>
                }
            </div>
        </div>
    </div>
</header>

<div class="mobile-search-bar px-3 pb-2">
    <div class="search-input-wrapper">
        <i class="fa-solid fa-magnifying-glass search-icon"></i>
        <input type="text" placeholder="ابحث عن خدمات..." @oninput="HandleSearch" />
    </div>
</div>
<CategoryMarquee />

<style>
    .mobile-header-premium {
        position: sticky;
        top: 0;
        z-index: 1000;
        padding: 8px 15px;
        background: transparent;
    }

    .header-glass-content {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .menu-toggle-btn-glass {
        background: rgba(var(--theme-primary-rgb), 0.1);
        border: none;
        color: var(--theme-primary);
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        transition: all 0.2s;
    }

    .logo-wrapper-mobile {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .logo-icon-glow {
        color: var(--theme-primary);
        font-size: 1.3rem;
        filter: drop-shadow(0 0 10px var(--theme-glow));
        animation: pulse-glow 2s infinite;
    }

    .logo-text-premium {
        font-weight: 900;
        font-size: 1.2rem;
        background: linear-gradient(135deg, var(--theme-primary), var(--theme-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.5px;
    }

    .user-profile-header-premium {
        display: flex;
        align-items: center;
        gap: 10px;
        cursor: pointer;
        background: rgba(255, 255, 255, 0.5);
        padding: 4px 4px 4px 12px;
        border-radius: 50px;
        border: 1px solid rgba(0, 0, 0, 0.03);
    }

    [dir="rtl"] .user-profile-header-premium {
        padding: 4px 12px 4px 4px;
    }

    .user-name-header {
        font-size: 0.8rem;
        font-weight: 800;
        color: #1e293b;
        max-width: 80px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .avatar-header-wrapper {
        position: relative;
    }

    .user-header-avatar-premium {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .online-dot-small {
        position: absolute;
        bottom: 1px;
        right: 1px;
        width: 8px;
        height: 8px;
        background: #22c55e;
        border-radius: 50%;
        border: 1.5px solid white;
    }

    .icon-btn-minimal {
        width: 38px;
        height: 38px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #64748b;
        font-size: 1.1rem;
        position: relative;
        margin-right: 5px;
    }

    .btn-login-minimal {
        background: var(--theme-primary);
        color: white;
        border: none;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        box-shadow: 0 4px 12px var(--theme-glow);
    }

    .badge-dot {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 8px;
        height: 8px;
        background: #ef4444;
        border-radius: 50%;
        border: 2px solid white;
    }

    .mobile-search-bar {
        background: transparent;
        margin-top: -5px;
    }

    .search-input-wrapper {
        position: relative;
        width: 100%;
        padding: 0 5px;
    }

    .search-input-wrapper input {
        width: 100%;
        padding: 12px 45px 12px 15px;
        border-radius: 18px;
        border: 1px solid rgba(255, 255, 255, 0.5);
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        font-size: 0.9rem;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.03);
    }

    [dir="rtl"] .search-input-wrapper input {
        padding: 12px 15px 12px 45px;
    }

    .search-icon {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--theme-primary);
        opacity: 0.7;
    }

    [dir="rtl"] .search-icon {
        right: auto;
        left: 20px;
    }
    .theme-switcher-mobile {
        position: relative;
    }

    .theme-popover-mobile {
        position: absolute;
        top: 110%;
        right: 0;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 12px;
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        z-index: 1001;
        border: 1px solid rgba(0, 0, 0, 0.05);
        min-width: 150px;
    }

    .theme-grid-mobile {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 10px;
    }

    .theme-dot-mobile {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        border: 2px solid white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: transform 0.2s;
    }

    .theme-dot-mobile:active { transform: scale(0.9); }
    .theme-dot-mobile.active { border-color: var(--theme-primary); transform: scale(1.1); }

    .theme-dot-mobile.default { background: linear-gradient(135deg, #8e2de2, #4a00e0); }
    .theme-dot-mobile.sunset { background: linear-gradient(135deg, #ff4e50, #f9d423); }
    .theme-dot-mobile.ocean { background: linear-gradient(135deg, #00c6ff, #0072ff); }
    .theme-dot-mobile.forest { background: linear-gradient(135deg, #00f260, #0575e6); }
    .theme-dot-mobile.lavender { background: linear-gradient(135deg, #bf5af2, #5e5ce6); }
    .theme-dot-mobile.royal { background: linear-gradient(135deg, #f093fb, #f5576c); }

    .animate-up { animation: slideUp 0.3s ease-out; }
    @@keyframes slideUp { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

@code {
    private bool isThemeMenuOpen = false;

    protected override void OnInitialized()
    {
        State.OnChange += OnStateChange;
    }

    private async void OnStateChange()
    {
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        State.OnChange -= OnStateChange;
    }

    private void ToggleSidebar()
    {
        State.IsSidebarOpen = !State.IsSidebarOpen;
        State.TriggerStateChanged();
    }

    private void ToggleThemeMenu()
    {
        isThemeMenuOpen = !isThemeMenuOpen;
    }

    private async Task HandleSetTheme(string theme)
    {
        State.SetTheme(theme);
        await JS.InvokeVoidAsync("document.body.setAttribute", "data-theme", theme);
        isThemeMenuOpen = false;
    }

    private void HandleSearch(ChangeEventArgs e)
    {
        // Placeholder for search logic
    }
}
