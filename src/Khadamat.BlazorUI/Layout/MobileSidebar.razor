@using Khadamat.BlazorUI.State
@inject AppState State
@inject NavigationManager Navigation

<div class="sidebar-overlay @(State.IsSidebarOpen ? "show" : "")" @onclick="CloseSidebar"></div>

<aside class="mobile-sidebar-drawer @(State.IsSidebarOpen ? "open" : "")">
    <div class="sidebar-top">
        <div class="user-brief" @onclick='() => NavigateTo("/profile")'>
            <img src="@State.UserImageUrl" class="user-avatar" />
            <div class="user-text">
                <span class="welcome">مرحباً بك،</span>
                <span class="user-name">@State.UserName</span>
            </div>
        </div>
        <button class="close-btn" @onclick="CloseSidebar">
            <i class="fa-solid fa-xmark"></i>
        </button>
    </div>

    <div class="sidebar-menu">
        <div class="menu-section">
            <h6 class="section-title">القائمة الرئيسية</h6>
            <div class="menu-items">
                <div class="menu-item @GetActiveClass("")" @onclick='() => NavigateTo("/")'>
                    <i class="fa-solid fa-house"></i>
                    <span>الرئيسية</span>
                </div>
                <div class="menu-item @GetActiveClass("categories")" @onclick='() => NavigateTo("/categories")'>
                    <i class="fa-solid fa-grid-2"></i>
                    <span>التصنيفات</span>
                </div>
                <div class="menu-item @GetActiveClass("services")" @onclick='() => NavigateTo("/services")'>
                    <i class="fa-solid fa-briefcase"></i>
                    <span>تصفح الخدمات</span>
                </div>
            </div>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="menu-section">
                    <h6 class="section-title">حسابي</h6>
                    <div class="menu-items">
                        <div class="menu-item @GetActiveClass("profile")" @onclick='() => NavigateTo("/profile")'>
                            <i class="fa-solid fa-user-circle"></i>
                            <span>الملف الشخصي</span>
                        </div>
                        <div class="menu-item @GetActiveClass("favorites")" @onclick='() => NavigateTo("/client/favorites")'>
                            <i class="fa-solid fa-heart"></i>
                            <span>المفضلة</span>
                        </div>
                        <div class="menu-item @GetActiveClass("messages")" @onclick='() => NavigateTo("/provider/messages")'>
                            <i class="fa-solid fa-comment-dots"></i>
                            <span>الرسايل</span>
                        </div>
                    </div>
                </div>

                @if (State.IsProvider)
                {
                    <div class="menu-section">
                        <h6 class="section-title">وضع المزود</h6>
                        <div class="menu-items">
                             <div class="menu-item provider-mode-btn" @onclick="ToggleProviderMode">
                                <i class="fa-solid fa-arrows-rotate"></i>
                                <span>@(State.IsProviderMode ? "التبديل لوضع العميل" : "التبديل لوضع المزود")</span>
                             </div>
                        </div>
                    </div>
                }
            </Authorized>
            <NotAuthorized>
                <div class="menu-section">
                    <h6 class="section-title">مرحباً بك</h6>
                    <div class="auth-promo-card">
                        <p>سجل دخولك للحصول على كامل المميزات</p>
                        <div class="auth-buttons-grid">
                            <button class="btn-sidebar-login" @onclick='() => NavigateTo("/login")'>
                                <i class="fa-solid fa-right-to-bracket ms-1"></i> دخول
                            </button>
                            <button class="btn-sidebar-register" @onclick='() => NavigateTo("/register")'>
                                <i class="fa-solid fa-user-plus ms-1"></i> حساب جديد
                            </button>
                        </div>
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="sidebar-bottom">
        <div class="app-version">إصدار 1.0.0</div>
    </div>
</aside>

<style>
    .sidebar-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(4px);
        z-index: 1050;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .sidebar-overlay.show {
        opacity: 1;
        pointer-events: auto;
    }

    .mobile-sidebar-drawer {
        position: fixed;
        top: 0;
        right: -280px; /* Hidden on the right for RTL */
        width: 280px;
        height: 100vh;
        background: white;
        z-index: 1100;
        transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
    }

    .mobile-sidebar-drawer.open {
        right: 0;
    }

    .sidebar-top {
        padding: 40px 20px 20px;
        background: linear-gradient(135deg, var(--theme-primary, #6366f1) 0%, var(--theme-secondary, #4f46e5) 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
    }

    .user-brief {
        display: flex;
        align-items: center;
        gap: 12px;
        cursor: pointer;
    }

    .user-avatar {
        width: 48px;
        height: 48px;
        border-radius: 14px;
        object-fit: cover;
        border: 2px solid rgba(255, 255, 255, 0.3);
    }

    .user-text {
        display: flex;
        flex-direction: column;
    }

    .welcome {
        font-size: 0.75rem;
        opacity: 0.8;
    }

    .user-name {
        font-weight: 700;
        font-size: 1rem;
    }

    .close-btn {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .sidebar-menu {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }

    .menu-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 0.7rem;
        font-weight: 800;
        text-transform: uppercase;
        color: #94a3b8;
        margin-bottom: 12px;
        letter-spacing: 0.5px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 15px;
        border-radius: 12px;
        color: #475569;
        font-weight: 600;
        margin-bottom: 4px;
        transition: all 0.2s;
        cursor: pointer;
    }

    .menu-item i {
        font-size: 1.2rem;
        width: 24px;
        text-align: center;
        color: #64748b;
    }

    .menu-item:active {
        background: #f1f5f9;
        transform: scale(0.98);
    }

    .menu-item.active {
        background: var(--theme-light, rgba(99, 102, 241, 0.1));
        color: var(--theme-primary, #6366f1);
    }

    .menu-item.active i {
        color: var(--theme-primary, #6366f1);
    }

    .provider-mode-btn {
        background: #f8fafc;
        border: 1px dashed #cbd5e1;
    }

    /* Auth Promo Card */
    .auth-promo-card {
        background: #f1f5f9;
        padding: 15px;
        border-radius: 16px;
        text-align: center;
    }

    .auth-promo-card p {
        font-size: 0.8rem;
        color: #64748b;
        margin-bottom: 12px;
        font-weight: 600;
    }

    .auth-buttons-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 8px;
    }

    .btn-sidebar-login, .btn-sidebar-register {
        padding: 10px;
        border-radius: 10px;
        font-size: 0.85rem;
        font-weight: 700;
        border: none;
        transition: all 0.2s;
    }

    .btn-sidebar-login {
        background: var(--theme-primary, #6366f1);
        color: white;
    }

    .btn-sidebar-register {
        background: white;
        color: #475569;
        border: 1px solid #e2e8f0;
    }

    .btn-sidebar-login:active, .btn-sidebar-register:active {
        transform: scale(0.95);
    }

    .sidebar-bottom {
        padding: 20px;
        border-top: 1px solid #f1f5f9;
        text-align: center;
        color: #94a3b8;
        font-size: 0.75rem;
    }
</style>

@code {
    protected override void OnInitialized()
    {
        State.OnChange += OnStateChange;
    }

    private async void OnStateChange()
    {
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        State.OnChange -= OnStateChange;
    }

    private void CloseSidebar()
    {
        State.IsSidebarOpen = false;
        State.TriggerStateChanged();
    }

    private void NavigateTo(string path)
    {
        CloseSidebar();
        Navigation.NavigateTo(path);
    }

    private string GetActiveClass(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath.Trim('/');
        return currentPath == path.Trim('/') ? "active" : "";
    }

    private void ToggleProviderMode()
    {
        State.IsProviderMode = !State.IsProviderMode;
        CloseSidebar();
        if (State.IsProviderMode) Navigation.NavigateTo("/provider/dashboard");
        else Navigation.NavigateTo("/");
    }
}
