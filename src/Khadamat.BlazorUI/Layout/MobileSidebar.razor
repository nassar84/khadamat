@using Khadamat.BlazorUI.State
@inject AppState State
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject Khadamat.BlazorUI.Services.Auth.IAuthService AuthService
@inject Khadamat.Shared.Interfaces.IShareService ShareService

<div class="sidebar-overlay @(State.IsSidebarOpen ? "show" : "")" @onclick="CloseSidebar"></div>

<aside class="mobile-sidebar-drawer @(State.IsSidebarOpen ? "open" : "")">
    <div class="sidebar-menu">
        <AuthorizeView>
            <Authorized>
                <div class="sidebar-top-premiumAuthorized">
                    <div class="user-brief-premium" @onclick='() => NavigateTo("/profile")'>
                        <div class="avatar-ring">
                            <img src="@State.UserImageUrl" class="user-avatar-premium" />
                        </div>
                        <div class="user-text-premium">
                            <span class="welcome-label">مرحباً بك،</span>
                            <span class="user-name-sidebar">@State.UserName</span>
                        </div>
                    </div>
                </div>

                <div class="menu-sections-wrapper">
                    <div class="menu-section">
                        <h6 class="section-title">القائمة الرئيسية</h6>
                        <div class="menu-items">
                            <div class="menu-item @GetActiveClass("")" @onclick='() => NavigateTo("/")'>
                                <i class="fa-solid fa-house"></i>
                                <span>الرئيسية</span>
                            </div>
                            <div class="menu-item @GetActiveClass("categories")" @onclick='() => NavigateTo("/categories")'>
                                <i class="fa-solid fa-grid-2"></i>
                                <span>التصنيفات</span>
                            </div>
                            <div class="menu-item" @onclick="RefreshApp">
                                <i class="fa-solid fa-arrows-rotate"></i>
                                <span>تحديث التطبيق</span>
                            </div>
                        </div>
                    </div>

                    <div class="menu-section">
                        <h6 class="section-title">نشاطي</h6>
                        <div class="menu-items">
                            <div class="menu-item @GetActiveClass("client/favorites")" @onclick='() => NavigateTo("/client/favorites")'>
                                <i class="fa-solid fa-heart text-danger"></i>
                                <span>المفضلة</span>
                            </div>
                        </div>
                    </div>

                    <div class="menu-section">
                        <h6 class="section-title">الإعدادات</h6>
                        <div class="menu-items">
                            <div class="menu-item @GetActiveClass("profile")" @onclick='() => NavigateTo("/profile")'>
                                <i class="fa-solid fa-user-gear"></i>
                                <span>الملف الشخصي</span>
                            </div>

                            <AuthorizeView Roles="Admin,SystemAdmin,SuperAdmin" Context="adminCtx">
                                <div class="menu-item admin-link-premium" @onclick='() => NavigateTo("/admin")'>
                                    <i class="fa-solid fa-shield-halved"></i>
                                    <span>لوحة المدير</span>
                                </div>
                            </AuthorizeView>
                        </div>
                    </div>

                    @if (State.IsProvider)
                    {
                        <div class="menu-section">
                            <h6 class="section-title">إعدادات المزود</h6>
                            <div class="menu-items">
                                 <div class="menu-item provider-switch-item" @onclick="ToggleProviderMode">
                                    <i class="fa-solid fa-shuffle"></i>
                                    <span>@(State.IsProviderMode ? "التبديل للمستخدم العادي" : "التبديل للمهني/المزود")</span>
                                 </div>
                            </div>
                        </div>
                    }

                    <div class="menu-section mt-4">
                        <div class="menu-item logout-item" @onclick="HandleLogout">
                            <i class="fa-solid fa-power-off"></i>
                            <span>تسجيل الخروج</span>
                        </div>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="sidebar-top-guest">
                    <div class="logo-sidebar">
                        @if (!string.IsNullOrEmpty(State.AppLogo))
                        {
                            <img src="@State.AppLogo" class="logo-img" alt="Logo" style="height: 40px; width: auto;" />
                        }
                        else
                        {
                            <i class="fa-solid fa-bolt-lightning"></i>
                        }
                        <span>@State.AppName</span>
                    </div>
                </div>

                <div class="menu-sections-wrapper">
                    <div class="menu-section">
                        <h6 class="section-title">إكتشف خدمات</h6>
                        <div class="menu-items">
                            <div class="menu-item @GetActiveClass("")" @onclick='() => NavigateTo("/")'>
                                <i class="fa-solid fa-house"></i>
                                <span>الرئيسية</span>
                            </div>
                            <div class="menu-item" @onclick="RefreshApp">
                                <i class="fa-solid fa-arrows-rotate"></i>
                                <span>تحديث التطبيق</span>
                            </div>
                        </div>
                    </div>

                    <div class="auth-card-sidebar-premium">
                        <div class="auth-icon-circle">
                            <i class="fa-solid fa-user-plus"></i>
                        </div>
                        <h5>انضم إلينا الآن</h5>
                        <p>سجل دخولك لتتمكن من طلب الخدمات والتواصل مع المزودين</p>
                        <div class="auth-actions-sidebar">
                            <button class="btn-sidebar-login-new" @onclick='() => NavigateTo("/login")'>دخول</button>
                            <button class="btn-sidebar-register-new" @onclick='() => NavigateTo("/register")'>حساب جديد</button>
                        </div>
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <div class="sidebar-bottom">
        <div class="d-flex flex-column gap-2 mb-3 px-3">
             <button class="btn btn-outline-primary btn-sm rounded-pill w-100" @onclick="ShareApp">
                <i class="fa-solid fa-share-nodes me-2"></i> شارك التطبيق
             </button>
        </div>
        <div class="app-version">إصدار 1.0.0</div>
    </div>
</aside>

<style>
    .sidebar-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(4px);
        z-index: 1050;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .sidebar-overlay.show {
        opacity: 1;
        pointer-events: auto;
    }

    .mobile-sidebar-drawer {
        position: fixed;
        top: 0;
        right: -300px;
        width: 300px;
        height: 100vh;
        background: #f8fafc;
        z-index: 1100;
        transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
    }

    .mobile-sidebar-drawer.open {
        right: 0;
    }

    .sidebar-top-premiumAuthorized {
        padding: 40px 25px 25px;
        background: linear-gradient(135deg, var(--theme-primary, #8e2de2), var(--theme-secondary, #4a00e0));
        color: white;
        position: relative;
    }

    .user-brief-premium {
        display: flex;
        align-items: center;
        gap: 15px;
        cursor: pointer;
    }

    .avatar-ring {
        padding: 3px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 18px;
        display: flex;
    }

    .user-avatar-premium {
        width: 55px;
        height: 55px;
        border-radius: 15px;
        object-fit: cover;
        border: 2px solid white;
    }

    .user-text-premium {
        display: flex;
        flex-direction: column;
    }

    .welcome-label {
        font-size: 0.75rem;
        opacity: 0.9;
        font-weight: 600;
    }

    .user-name-sidebar {
        font-size: 1.1rem;
        font-weight: 800;
        letter-spacing: -0.5px;
    }

    .sidebar-top-guest {
        padding: 50px 25px 30px;
        background: #fff;
        border-bottom: 1px solid #f1f5f9;
        display: flex;
        justify-content: center;
    }

    .logo-sidebar {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.8rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--theme-primary), var(--theme-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .menu-sections-wrapper {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }

    .menu-section {
        margin-bottom: 25px;
    }

    .section-title {
        font-size: 0.75rem;
        font-weight: 800;
        color: #94a3b8;
        padding: 0 10px;
        margin-bottom: 12px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .menu-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 14px 18px;
        border-radius: 16px;
        color: #475569;
        font-weight: 700;
        margin-bottom: 6px;
        transition: all 0.2s;
        cursor: pointer;
    }

    .menu-item i {
        font-size: 1.25rem;
        width: 24px;
        text-align: center;
        opacity: 0.8;
    }

    .menu-item:active {
        background: #f1f5f9;
        transform: scale(0.97);
    }

    .menu-item.active {
        background: var(--theme-light, rgba(var(--theme-primary-rgb), 0.1));
        color: var(--theme-primary);
    }

    .admin-link-premium {
        background: rgba(245, 158, 11, 0.1) !important;
        color: #b45309 !important;
        border: 1px dashed rgba(245, 158, 11, 0.4);
    }

    .admin-link-premium i {
        color: #f59e0b !important;
        opacity: 1;
    }

    .provider-switch-item {
        background: #f1f5f9;
        border: 1px solid #e2e8f0;
    }

    .logout-item {
        color: #ef4444 !important;
        background: rgba(239, 68, 68, 0.05);
    }

    .logout-item i {
        color: #ef4444 !important;
    }

    /* Auth Card Guest */
    .auth-card-sidebar-premium {
        background: white;
        padding: 25px 20px;
        border-radius: 24px;
        text-align: center;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        border: 1px solid #f1f5f9;
        margin-top: 10px;
    }

    .auth-icon-circle {
        width: 60px;
        height: 60px;
        background: var(--theme-light, rgba(var(--theme-primary-rgb), 0.1));
        color: var(--theme-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        font-size: 1.5rem;
    }

    .auth-card-sidebar-premium h5 {
        font-weight: 800;
        margin-bottom: 8px;
        color: #1e293b;
    }

    .auth-card-sidebar-premium p {
        font-size: 0.8rem;
        color: #64748b;
        margin-bottom: 20px;
        line-height: 1.5;
    }

    .auth-actions-sidebar {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .btn-sidebar-login-new, .btn-sidebar-register-new {
        padding: 10px;
        border-radius: 12px;
        font-weight: 800;
        font-size: 0.85rem;
        border: none;
        transition: all 0.2s;
    }

    .btn-sidebar-login-new {
        background: var(--theme-primary);
        color: white;
        box-shadow: 0 4px 12px var(--theme-glow);
    }

    .btn-sidebar-register-new {
        background: #f1f5f9;
        color: #475569;
    }

    .sidebar-bottom {
        padding: 20px;
        text-align: center;
        color: #94a3b8;
        font-size: 0.75rem;
        border-top: 1px solid #f1f5f9;
    }
</style>

@code {
    protected override void OnInitialized()
    {
        State.OnChange += OnStateChange;
    }

    private async void OnStateChange()
    {
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        State.OnChange -= OnStateChange;
    }

    private void CloseSidebar()
    {
        State.IsSidebarOpen = false;
        State.TriggerStateChanged();
    }

    private void NavigateTo(string path)
    {
        CloseSidebar();
        Navigation.NavigateTo(path);
    }

    private async Task HandleLogout()
    {
        CloseSidebar();
        await AuthService.Logout();
        Navigation.NavigateTo("/login");
    }

    private async Task RefreshApp()
    {
        CloseSidebar();
        await JS.InvokeVoidAsync("location.reload");
    }

    private string GetActiveClass(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath.Trim('/');
        return currentPath == path.Trim('/') ? "active" : "";
    }

    private async Task ShareApp()
    {
        await ShareService.ShareTextAsync("حمل تطبيق خدمات الرائع الآن! منصتك المثالية لكل ما تحتاجه.", "مشاركة تطبيق خدمات");
    }

    private void ToggleProviderMode()
    {
        State.IsProviderMode = !State.IsProviderMode;
        CloseSidebar();
        if (State.IsProviderMode) Navigation.NavigateTo("/provider/dashboard");
        else Navigation.NavigateTo("/");
    }
}
